#align quiver.single_obj.star Quiver.SingleObj.star

instance : Inhabited (SingleObj Œ±) :=
  ‚ü®star Œ±‚ü©

variable {Œ± Œ≤ Œ≥}

lemma ext {x y : SingleObj Œ±} : x = y := Unit.ext x y

