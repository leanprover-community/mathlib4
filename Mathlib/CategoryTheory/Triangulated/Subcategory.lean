lemma mem_W_iff_of_distinguished
    [ClosedUnderIsomorphisms S.P] (T : Triangle C) (hT : T ‚àà distTriang C) :
    S.W T.mor‚ÇÅ ‚Üî S.P T.obj‚ÇÉ := by
  constructor
