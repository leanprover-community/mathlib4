    ((F.mapHomologicalComplex _).obj P.complex).opcycles 0 ‚ü∂ F.obj X :=
  HomologicalComplex.descOpcycles _ (F.map (P.œÄ.f 0)) 1 (by simp) (by
    dsimp
    rw [‚Üê F.map_comp, complex_d_comp_œÄ_f_zero, F.map_zero])

