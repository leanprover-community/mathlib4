@[reassoc]
theorem Œπ_d {G A : C} {M : ModuleCat (End G)·µê·µí·µñ} (g : M ‚ü∂ ModuleCat.of (End G)·µê·µí·µñ (G ‚ü∂ A)) (m : M) :
    Sigma.Œπ _ m ‚â´ d g = g.hom m := by
