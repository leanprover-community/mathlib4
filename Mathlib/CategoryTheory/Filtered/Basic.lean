    cocone_maps := fun X Y f g =>
      ‚ü®_, h.homEquiv _ _ (coeqHom _ _), by
        rw [‚Üê h.homEquiv_naturality_left, ‚Üê h.homEquiv_naturality_left, coeq_condition]‚ü© }

