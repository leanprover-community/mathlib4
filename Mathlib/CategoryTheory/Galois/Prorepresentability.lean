instance : IsCofilteredOrEmpty (PointedGaloisObject F) where
  cone_objs := fun ‚ü®A, a, _‚ü© ‚ü®B, b, _‚ü© ‚Ü¶ by
    obtain ‚ü®Z, f, z, hgal, hfz‚ü© := exists_hom_from_galois_of_fiber F (A ‚®Ø B)
      <| (fiberBinaryProductEquiv F A B).symm (a, b)
