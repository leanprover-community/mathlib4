    f ‚â´ decompId_i Q = decompId_i P ‚â´ (by exact Hom.mk f.f (by simp)) := by
  aesop_cat

theorem decompId_p_naturality {P Q : Karoubi C} (f : P ‚ü∂ Q) :
    decompId_p P ‚â´ f = (by exact Hom.mk f.f (by simp)) ‚â´ decompId_p Q := by
  aesop_cat

