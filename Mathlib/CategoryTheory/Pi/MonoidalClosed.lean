@[simps]
def closedUnit (X : ‚àÄ i, C i) : ùü≠ (‚àÄ i, C i) ‚ü∂ tensorLeft X ‚ãô (closedIhom X) where
  app Y := fun i ‚Ü¶ (ihom.coev (X i)).app (Y i)

