variable (f g)

lemma equivalence :
    _root_.Equivalence (PushoutRel' f g) where
  refl := PushoutRel'.refl _ _
  symm h := h.symm
  trans := by
    intro x y z hxy hyz
    obtain _|‚ü®_, _, h‚ü©|s|_ := hxy
    ¬∑ exact hyz
    ¬∑ obtain z‚ÇÅ|z‚ÇÇ := z
      ¬∑ rw [inl_rel'_inl_iff] at hyz
        obtain rfl|‚ü®_, _, h', h'', rfl‚ü©  := hyz
        ¬∑ exact inl_inl _ _ h
        ¬∑ obtain rfl := (mono_iff_injective f).1 inferInstance h''
          exact inl_inl _ _ (h.trans h')
      ¬∑ rw [inl_rel'_inr_iff] at hyz
        obtain ‚ü®s, hs, rfl‚ü© := hyz
        obtain rfl := (mono_iff_injective f).1 inferInstance hs
        rw [‚Üê h]
        apply inl_inr
    ¬∑ obtain z‚ÇÅ|z‚ÇÇ := z
      ¬∑ replace hyz := hyz.symm
        rw [inl_rel'_inr_iff] at hyz
        obtain ‚ü®s', rfl, hs'‚ü© := hyz
        exact inl_inl _ _ hs'
      ¬∑ rw [inr_rel'_inr_iff] at hyz
        subst hyz
        apply inl_inr
    ¬∑ obtain z‚ÇÅ|z‚ÇÇ := z
      ¬∑ rw [inl_rel'_inl_iff] at hyz
        obtain rfl|‚ü®_, _, h, h', rfl‚ü©  := hyz
        ¬∑ apply inr_inl
        ¬∑ obtain rfl := (mono_iff_injective f).1 inferInstance h'
          rw [h]
          apply inr_inl
      ¬∑ rw [inl_rel'_inr_iff] at hyz
        obtain ‚ü®s, hs, rfl‚ü© := hyz
        obtain rfl := (mono_iff_injective f).1 inferInstance hs
        apply refl

end PushoutRel'

/-- The quotient of `X‚ÇÅ ‚äï X‚ÇÇ` by the relation `PushoutRel' f g`. -/
def Pushout' : Type w := _root_.Quot (PushoutRel' f g)

/-- The obvious equivalence `Pushout f g ‚âÉ Pushout' f g`. -/
def pushoutEquiv : Pushout f g ‚âÉ Pushout' f g where
  toFun := Quot.lift (Quot.mk _) (by
    rintro _ _ ‚ü®‚ü©
    apply Quot.sound
    apply PushoutRel'.inl_inr)
  invFun := Quot.lift (Quot.mk _) (by
    rintro a b h
    obtain _|‚ü®x‚ÇÄ, y‚ÇÄ, h‚ü©|_|_ := h
    ¬∑ rfl
    ¬∑ have h‚ÇÄ : PushoutRel f g _ _ := PushoutRel.mk x‚ÇÄ
      rw [Quot.sound h‚ÇÄ, h]
      symm
      apply Quot.sound
      apply PushoutRel.mk
    ¬∑ apply Quot.sound
      apply PushoutRel.mk
    ¬∑ symm
      apply Quot.sound
      apply PushoutRel.mk)
  left_inv := by rintro ‚ü®x‚ü©; rfl
  right_inv := by rintro ‚ü®x‚ü©; rfl

