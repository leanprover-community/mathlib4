@[reassoc (attr := simp)]
lemma œÄ_Œπ : œÄ œÜ ‚â´ Œπ œÜ = œÜ := rfl

instance [Epi œÜ] : Epi (Œπ œÜ) := epi_of_epi_fac (œÄ_Œπ œÜ)

