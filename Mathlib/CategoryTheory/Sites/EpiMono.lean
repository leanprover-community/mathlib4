variable {S X‚ÇÅ X‚ÇÇ : Type w} (f : S ‚ü∂ X‚ÇÅ) (g : S ‚ü∂ X‚ÇÇ)

/-- The pushout of two maps `f : S ‚ü∂ X‚ÇÅ` and `g : S ‚ü∂ X‚ÇÇ` is the quotient
by the equivalence relation on `X‚ÇÅ ‚äï X‚ÇÇ` relation generated by this relation. -/
inductive PushoutRel (f : S ‚ü∂ X‚ÇÅ) (g : S ‚ü∂ X‚ÇÇ) :
    Sum X‚ÇÅ X‚ÇÇ ‚Üí Sum X‚ÇÅ X‚ÇÇ ‚Üí Prop
  | mk (s : S) : PushoutRel f g (Sum.inl (f s)) (Sum.inr (g s))

/-- Construction of the pushout in the category of types, as a quotient of `X‚ÇÅ ‚äï X‚ÇÇ`. -/
def Pushout : Type w := _root_.Quot (PushoutRel f g)

/-- The left inclusion in the constructed pushout `Pushout f g`. -/
@[simp]
def pushoutInl : X‚ÇÅ ‚ü∂ Pushout f g := fun x => Quot.mk _ (Sum.inl x)

/-- The right inclusion in the constructed pushout `Pushout f g`. -/
@[simp]
def pushoutInr : X‚ÇÇ ‚ü∂ Pushout f g := fun x => Quot.mk _ (Sum.inr x)

lemma pushout_condition : f ‚â´ pushoutInl f g = g ‚â´ pushoutInr f g := by
  ext x
  exact Quot.sound (PushoutRel.mk x)

/-- The constructed pushout cocone in the category of types. -/
@[simps!]
def pushoutCocone : PushoutCocone f g :=
    PushoutCocone.mk _ _ (pushout_condition f g)

/-- The cocone `pushoutCocone f g` is colimit. -/
def isColimitPushoutCocone : IsColimit (pushoutCocone f g) :=
  PushoutCocone.IsColimit.mk _ (fun s => Quot.lift (fun x => match x with
      | Sum.inl x‚ÇÅ => s.inl x‚ÇÅ
      | Sum.inr x‚ÇÇ => s.inr x‚ÇÇ) (by
    rintro _ _ ‚ü®t‚ü©
    exact congr_fun s.condition t)) (fun _ => rfl) (fun _ => rfl) (fun s m h‚ÇÅ h‚ÇÇ => by
      ext ‚ü®x‚ÇÅ|x‚ÇÇ‚ü©
      ¬∑ exact congr_fun h‚ÇÅ x‚ÇÅ
      ¬∑ exact congr_fun h‚ÇÇ x‚ÇÇ)

/-- In case `f : S ‚ü∂ X‚ÇÅ` is a monomorphism, this relation is the equivalence relation
generated by `PushoutRel f g`. -/
inductive PushoutRel' : Sum X‚ÇÅ X‚ÇÇ ‚Üí Sum X‚ÇÅ X‚ÇÇ ‚Üí Prop
  | refl' (x : Sum X‚ÇÅ X‚ÇÇ) : PushoutRel' x x
  | inl_inl (x‚ÇÄ y‚ÇÄ : S) (h : g x‚ÇÄ = g y‚ÇÄ) : PushoutRel' (Sum.inl (f x‚ÇÄ)) (Sum.inl (f y‚ÇÄ))
  | inl_inr (s : S) : PushoutRel' (Sum.inl (f s)) (Sum.inr (g s))
  | inr_inl (s : S) : PushoutRel' (Sum.inr (g s)) (Sum.inl (f s))

namespace PushoutRel'

lemma refl (x : Sum X‚ÇÅ X‚ÇÇ) : PushoutRel' f g x x :=
  PushoutRel'.refl' x

lemma inl_rel'_inl_iff (x‚ÇÅ y‚ÇÅ : X‚ÇÅ) :
    PushoutRel' f g (Sum.inl x‚ÇÅ) (Sum.inl y‚ÇÅ) ‚Üî x‚ÇÅ = y‚ÇÅ ‚à®
      ‚àÉ (x‚ÇÄ y‚ÇÄ : S) (_ : g x‚ÇÄ = g y‚ÇÄ), x‚ÇÅ = f x‚ÇÄ ‚àß y‚ÇÅ = f y‚ÇÄ := by
  constructor
  ¬∑ intro h
    obtain _|‚ü®_, _, h‚ü©  := h
    ¬∑ exact Or.inl rfl
    ¬∑ exact Or.inr ‚ü®_, _, h, rfl, rfl‚ü©
  ¬∑ intro h
    obtain rfl | ‚ü®_,_ , h, rfl, rfl‚ü© := h
    ¬∑ apply refl
    ¬∑ exact inl_inl _ _ h

lemma inl_rel'_inr_iff (x‚ÇÅ : X‚ÇÅ) (x‚ÇÇ : X‚ÇÇ) :
    PushoutRel' f g (Sum.inl x‚ÇÅ) (Sum.inr x‚ÇÇ) ‚Üî
      ‚àÉ (s : S), x‚ÇÅ = f s ‚àß x‚ÇÇ = g s := by
  constructor
  ¬∑ intro h
    cases h
    exact ‚ü®_, rfl, rfl‚ü©
  ¬∑ rintro ‚ü®s, rfl, rfl‚ü©
    exact PushoutRel'.inl_inr _

lemma inr_rel'_inr_iff (x‚ÇÇ y‚ÇÇ : X‚ÇÇ) :
    PushoutRel' f g (Sum.inr x‚ÇÇ) (Sum.inr y‚ÇÇ) ‚Üî x‚ÇÇ = y‚ÇÇ := by
  constructor
  ¬∑ intro h
    cases h
    rfl
  ¬∑ rintro rfl
    apply refl

