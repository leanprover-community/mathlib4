    ‚àÉ (S : Sieve X.unop) (_ : S ‚àà J X.unop),
    ‚àÄ (Y : C) (f : Y ‚ü∂ X.unop) (_ : S f), ‚àÉ (y : F.1.obj (op Y)),
    œÜ.1.app _ y = G.1.map f.op x) : Epi œÜ where
