    pullbackArrows f (singleton g) = singleton (pullback.snd g f) := by
  funext W
  ext h
  constructor
  ¬∑ rintro ‚ü®W, _, _, _‚ü©
    exact singleton.mk
  ¬∑ rintro ‚ü®_‚ü©
    exact pullbackArrows.mk Z g singleton.mk

