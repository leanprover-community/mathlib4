  arrows Z _ := ‚àÉ (i : I), Nonempty (Z ‚ü∂ Y i)
  downward_closed := by
    rintro Z‚ÇÅ Z‚ÇÇ p ‚ü®i, ‚ü®f‚ü©‚ü© g
    exact ‚ü®i, ‚ü®g ‚â´ f‚ü©‚ü©

