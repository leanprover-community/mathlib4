/-- The full subcategory of the over category `C/X` consisting of arrows which belong to a
    presieve on `X`. -/
abbrev category {X : C} (P : Presieve X) :=
  FullSubcategory fun f : Over X => P f.hom

/-- Construct an object of `P.category`. -/
