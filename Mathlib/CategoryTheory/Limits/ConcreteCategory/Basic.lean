  let h1 : (F ‚ãô forget C).map f ‚â´ E.Œπ.app k = E.Œπ.app i := E.Œπ.naturality f
  let h2 : (F ‚ãô forget C).map g ‚â´ E.Œπ.app k = E.Œπ.app j := E.Œπ.naturality g
  show E.Œπ.app i x = E.Œπ.app j y
