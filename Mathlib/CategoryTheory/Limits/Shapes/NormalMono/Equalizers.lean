    { cocone :=
        PushoutCocone.mk a' b' <| by
          simp only [Cofork.œÄ_ofœÄ] at ha' hb'
          rw [ha', hb']
      isColimit :=
        PushoutCocone.IsColimit.mk _
          (fun s =>
            cokernel.desc (coprod.desc f g) (b ‚â´ PushoutCocone.inr s) <|
              coprod.hom_ext
