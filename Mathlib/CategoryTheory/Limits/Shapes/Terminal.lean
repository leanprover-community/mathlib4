    IsLimit (coneOfDiagramInitial tX F) where
  lift s := s.œÄ.app X
  uniq s m w := by
    conv_lhs => dsimp
    simp_rw [‚Üê w X, coneOfDiagramInitial_œÄ_app, tX.hom_ext (tX.to X) (ùüô _)]
    simp

