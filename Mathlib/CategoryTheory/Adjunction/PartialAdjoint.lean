lemma rightAdjointObjIsDefined_of_isLimit {J : Type*} [Category J] {R : J ‚•§ D} {c : Cone R}
    (hc : IsLimit c) [HasLimitsOfShape J C]
    (h : ‚àÄ (j : J), F.rightAdjointObjIsDefined (R.obj j)) :
