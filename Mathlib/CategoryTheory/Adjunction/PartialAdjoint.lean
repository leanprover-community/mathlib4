        { app := fun j ‚Ü¶ F.partialRightAdjointHomEquiv.symm (g ‚â´ c.œÄ.app j)
          naturality := fun j j' œÜ ‚Ü¶ by
            apply F.partialRightAdjointHomEquiv.injective
            have := c.w œÜ
