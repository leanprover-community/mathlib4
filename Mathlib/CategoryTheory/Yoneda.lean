def coyonedaEquiv {X : C} {F : C ‚•§ Type v‚ÇÅ} : (coyoneda.obj (op X) ‚ü∂ F) ‚âÉ F.obj X where
  toFun Œ∑ := Œ∑.app X (ùüô X)
  invFun Œæ := { app := fun Y x ‚Ü¶ F.map x Œæ }
  left_inv := fun Œ∑ ‚Ü¶ by
    ext Y (x : X ‚ü∂ Y)
    dsimp
    rw [‚Üê FunctorToTypes.naturality]
    simp
  right_inv := by intro Œæ; simp

