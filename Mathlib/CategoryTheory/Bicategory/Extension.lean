-/
abbrev RightLift (f : b ‚ü∂ a) (g : c ‚ü∂ a) := CostructuredArrow (postcomp _ f) g

namespace RightLift

variable {f : b ‚ü∂ a} {g : c ‚ü∂ a}

/-- The lift of `g` along `f`. -/
abbrev lift (t : RightLift f g) : c ‚ü∂ b := t.left

/-- The 2-morphism filling the triangle diagram. -/
