@[ext]
lemma hom_ext {M N : Mod_ A} (f‚ÇÅ f‚ÇÇ : M ‚ü∂ N) (h : f‚ÇÅ.hom = f‚ÇÇ.hom) : f‚ÇÅ = f‚ÇÇ :=
  Hom.ext h

