  leftUnitor X := BinaryFan.leftUnitor ùíØ.IsLimit (‚Ñ¨ ùíØ.Cone.pt X).IsLimit
  rightUnitor X := BinaryFan.rightUnitor ùíØ.IsLimit (‚Ñ¨ X ùíØ.Cone.pt).IsLimit
