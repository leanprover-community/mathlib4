    (s : BinaryFan sXY.pt Z) : BinaryFan X sYZ.pt :=
  BinaryFan.mk (s.fst ‚â´ sXY.fst) (Q.lift (BinaryFan.mk (s.fst ‚â´ sXY.snd) s.snd))
