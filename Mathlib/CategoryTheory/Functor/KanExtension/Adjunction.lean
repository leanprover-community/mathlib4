variable [Full L] [Faithful L]

instance (F : C ‚•§ H) (X : C) [HasPointwiseLeftKanExtension L F]
    [‚àÄ (F : C ‚•§ H), HasLeftKanExtension L F] :
    IsIso ((L.lanUnit.app F).app X) :=
