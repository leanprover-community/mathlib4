theorem germ_comp_stalkToFiberLinearMap (U : Opens (PrimeSpectrum.Top R)) (x) (hx : x ‚àà U) :
    (tildeInModuleCat M).germ U x hx ‚â´ stalkToFiberLinearMap M x =
    openToLocalization M U x hx :=
  Limits.colimit.Œπ_desc _ _

@[simp]
