protected lemma mk' {P : MorphismProperty Scheme} [P.RespectsIso]
    (restrict : ‚àÄ {X Y : Scheme} (f : X ‚ü∂ Y) (U : Opens Y), P f ‚Üí P (f ‚à£_ U))
