    Arrow.mk f ‚âÖ Arrow.mk ((Spec.map f).appTop) :=
  Arrow.isoMk (Scheme.ŒìSpecIso _).symm (Scheme.ŒìSpecIso _).symm
    (Scheme.ŒìSpecIso_inv_naturality f).symm

