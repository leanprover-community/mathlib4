theorem _root_.Continuous.ae_eq_iff_eq {f g : X ‚Üí Y} (hf : Continuous f) (hg : Continuous g) :
    f =·µê[Œº] g ‚Üî f = g :=
  ‚ü®fun h => eq_of_ae_eq h hf hg, fun h => h ‚ñ∏ EventuallyEq.rfl‚ü©
#align continuous.ae_eq_iff_eq Continuous.ae_eq_iff_eq

