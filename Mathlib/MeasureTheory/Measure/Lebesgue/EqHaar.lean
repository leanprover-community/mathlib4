/-!
### Basic properties of Haar measures on real vector spaces
-/


theorem map_add_haar_smul {r : ‚Ñù} (hr : r ‚â† 0) :
    Measure.map ((¬∑ ‚Ä¢ ¬∑) r) Œº = ENNReal.ofReal (abs (r ^ finrank ‚Ñù E)‚Åª¬π) ‚Ä¢ Œº :=
  by
  let f : E ‚Üí‚Çó[‚Ñù] E := r ‚Ä¢ 1
  change measure.map f Œº = _
  have hf : f.det ‚â† 0 :=
    by
    simp only [mul_one, LinearMap.det_smul, Ne.def, MonoidHom.map_one]
    intro h
    exact hr (pow_eq_zero h)
  simp only [map_linear_map_add_haar_eq_smul_add_haar Œº hf, mul_one, LinearMap.det_smul,
    MonoidHom.map_one]
#align measure_theory.measure.map_add_haar_smul MeasureTheory.Measure.map_add_haar_smul

@[simp]
theorem add_haar_preimage_smul {r : ‚Ñù} (hr : r ‚â† 0) (s : Set E) :
    Œº ((¬∑ ‚Ä¢ ¬∑) r ‚Åª¬π' s) = ENNReal.ofReal (abs (r ^ finrank ‚Ñù E)‚Åª¬π) * Œº s :=
  calc
