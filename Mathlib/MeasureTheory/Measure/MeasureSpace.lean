    simp only [LinearMap.map_smul‚Çõ‚Çó, coe_smul, Pi.smul_apply,
      toMeasure_apply, smul_toOuterMeasure (R := ‚Ñù‚â•0‚àû), OuterMeasure.coe_smul (R := ‚Ñù‚â•0‚àû),
      smul_apply, hs]
