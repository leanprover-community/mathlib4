  have K_pos : 0 < Œº K := measure_pos_of_nonempty_interior _ ‚ü®_, Kint‚ü©
  have A : ‚àÄ L : Set G, IsCompact L ‚Üí ‚àÉ g : G, Disjoint L (g ‚Ä¢ K) := fun L hL =>
