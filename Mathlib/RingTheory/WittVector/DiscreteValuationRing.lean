variable {k : Type*} [Field k] [CharP k p]

theorem isUnit_of_coeff_zero_ne_zero (x : ùïé k) (hx : x.coeff 0 ‚â† 0) : IsUnit x := by
  let y : kÀ£ := Units.mk0 (x.coeff 0) hx
