#align witt_vector.is_unit_of_coeff_zero_ne_zero WittVector.isUnit_of_coeff_zero_ne_zero

variable (p)

theorem irreducible : Irreducible (p : ùïé k) := by
  have hp : ¬¨IsUnit (p : ùïé k) := by
    intro hp
