      simpa [Finsupp.mapDomain, Finsupp.sum, Finsupp.finset_sum_apply, RingHom.mem_ker,
        Finsupp.single_apply, ‚Üê Finset.sum_filter] using DFunLike.congr_fun hx c
    obtain ‚ü®a, ha‚ü© := h c
