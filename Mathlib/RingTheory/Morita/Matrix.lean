@[simp]
lemma mem_toModuleCatObj (i : Œπ) {x : M} :
    x ‚àà toModuleCatObj R M i ‚Üî ‚àÉ y : M, single i i (1 : R) ‚Ä¢ y = x :=
  Iff.rfl

