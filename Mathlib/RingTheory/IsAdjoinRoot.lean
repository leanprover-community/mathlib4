theorem algEquiv_trans {U : Type*} [CommRing U] [Algebra R U]
    (h' : IsAdjoinRoot T f) (h'' : IsAdjoinRoot U f) :
    (h.algEquiv h').trans (h'.algEquiv h'') = h.algEquiv h'' := by
  ext z
  exact h.algEquiv_algEquiv h' h'' z

