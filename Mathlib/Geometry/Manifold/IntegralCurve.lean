variable {t‚ÇÄ}

/-- Local integral curves are unique.

If a $C^1$ vector field `v` admits two local integral curves `Œ≥ Œ≥' : ‚Ñù ‚Üí M` at `t‚ÇÄ` with
`Œ≥ t‚ÇÄ = Œ≥' t‚ÇÄ`, then `Œ≥` and `Œ≥'` agree on some open interval containing `t‚ÇÄ`. -/
theorem isIntegralCurveAt_eqOn_of_contMDiffAt (hŒ≥t‚ÇÄ : I.IsInteriorPoint (Œ≥ t‚ÇÄ))
    (hv : ContMDiffAt I I.tangent 1 (fun x ‚Ü¶ (‚ü®x, v x‚ü© : TangentBundle I M)) (Œ≥ t‚ÇÄ))
    (hŒ≥ : IsIntegralCurveAt Œ≥ v t‚ÇÄ) (hŒ≥' : IsIntegralCurveAt Œ≥' v t‚ÇÄ) (h : Œ≥ t‚ÇÄ = Œ≥' t‚ÇÄ) :
    ‚àÉ Œµ > 0, EqOn Œ≥ Œ≥' (Ioo (t‚ÇÄ - Œµ) (t‚ÇÄ + Œµ)) := by
  -- first define `v'` as the vector field expressed in the local chart around `Œ≥ t‚ÇÄ`
  -- this is basically what the function looks like when `hv` is unfolded
  set v' : E ‚Üí E := fun x ‚Ü¶
    tangentCoordChange I ((extChartAt I (Œ≥ t‚ÇÄ)).symm x) (Œ≥ t‚ÇÄ) ((extChartAt I (Œ≥ t‚ÇÄ)).symm x)
      (v ((extChartAt I (Œ≥ t‚ÇÄ)).symm x)) with hv'

  -- extract a set `s` on which `v'` is Lipschitz
  rw [contMDiffAt_iff] at hv
  obtain ‚ü®_, hv‚ü© := hv
  obtain ‚ü®K, s, hs, hlip‚ü© : ‚àÉ K, ‚àÉ s ‚àà nhds _, LipschitzOnWith K v' s :=
    (hv.contDiffAt (range_mem_nhds_isInteriorPoint hŒ≥t‚ÇÄ)).snd.exists_lipschitzOnWith
  have hlip (t : ‚Ñù) : LipschitzOnWith K ((fun _ ‚Ü¶ v') t) ((fun _ ‚Ü¶ s) t) := hlip

  -- `Œ≥ t` when expressed in the local chart should remain inside `s`
  have hcont : ContinuousAt ((extChartAt I (Œ≥ t‚ÇÄ)) ‚àò Œ≥) t‚ÇÄ :=
    (continuousAt_extChartAt ..).comp hŒ≥.continuousAt
  rw [continuousAt_def] at hcont
  have hnhds := hcont _ hs
  rw [‚Üê eventually_mem_nhds] at hnhds

  -- `Œ≥ t` should remain inside the domain of the local chart around `Œ≥ t‚ÇÄ`
  have hsrc := continuousAt_def.mp hŒ≥.continuousAt _ <| extChartAt_source_mem_nhds I (Œ≥ t‚ÇÄ)
  rw [‚Üê eventually_mem_nhds] at hsrc

  -- same as above but for `Œ≥'`
  have hcont' : ContinuousAt ((extChartAt I (Œ≥' t‚ÇÄ)) ‚àò Œ≥') t‚ÇÄ :=
    ContinuousAt.comp (continuousAt_extChartAt ..) hŒ≥'.continuousAt
  rw [continuousAt_def] at hcont'
  have hnhds' := hcont' _ (h ‚ñ∏ hs)
  rw [‚Üê eventually_mem_nhds] at hnhds'

  have hsrc' := continuousAt_def.mp hŒ≥'.continuousAt _ <| extChartAt_source_mem_nhds I (Œ≥' t‚ÇÄ)
  rw [‚Üê eventually_mem_nhds] at hsrc'

  -- there exists a neighbourhood around `t‚ÇÄ` in which all of the above hold
  have haux := hnhds.and <| hsrc.and <| hŒ≥.and <| hnhds'.and <| hsrc'.and hŒ≥'
  rw [Metric.eventually_nhds_iff_ball] at haux

  obtain ‚ü®Œµ, hŒµ, haux‚ü© := haux
  refine ‚ü®Œµ, hŒµ, ?_‚ü©

  -- break out all the conditions again
  have hmem := fun t ht ‚Ü¶ mem_preimage.mp <| mem_of_mem_nhds (haux t ht).1
  have hsrc := fun t ht ‚Ü¶ mem_preimage.mp <| mem_of_mem_nhds (haux t ht).2.1
  have hcrv : IsIntegralCurveOn _ _ _ := fun t ht ‚Ü¶ (haux t ht).2.2.1
  have hmem' := fun t ht ‚Ü¶ mem_preimage.mp <| mem_of_mem_nhds (haux t ht).2.2.2.1
  have hsrc' := fun t ht ‚Ü¶ mem_preimage.mp <| mem_of_mem_nhds (haux t ht).2.2.2.2.1
  have hcrv' : IsIntegralCurveOn _ _ _ := fun t ht ‚Ü¶ (haux t ht).2.2.2.2.2

  -- `Œ≥` and `Œ≥'` when expressed in the local chart are continuous on this neighbourhood
  have hcont := (continuousOn_extChartAt I (Œ≥ t‚ÇÄ)).comp hcrv.continuousOn hsrc
  have hcont' := (continuousOn_extChartAt I (Œ≥' t‚ÇÄ)).comp hcrv'.continuousOn hsrc'

  simp_rw [Real.ball_eq_Ioo] at hmem hsrc hcrv hcont hmem' hsrc' hcrv' hcont'

  -- `Œ≥` and `Œ≥'` are equal on `Ioo (t‚ÇÄ - Œµ) (t‚ÇÄ + Œµ)` when expressed in the local chart
  have heqon : EqOn ((extChartAt I (Œ≥ t‚ÇÄ)) ‚àò Œ≥) ((extChartAt I (Œ≥' t‚ÇÄ)) ‚àò Œ≥')
    (Ioo (t‚ÇÄ - Œµ) (t‚ÇÄ + Œµ)) := by
    -- uniqueness of ODE solutions in an open interval
    apply ODE_solution_unique_of_mem_set_Ioo hlip (t‚ÇÄ := t‚ÇÄ)
      (Real.ball_eq_Ioo _ _ ‚ñ∏ (Metric.mem_ball_self hŒµ)) hcont _ hmem hcont' _ hmem' (by simp [h])
    ¬∑ intros t ht
      rw [hv']
      have := hcrv.hasDerivAt ht (hsrc t ht)
      apply this.congr_deriv
      have : Œ≥ t = (extChartAt I (Œ≥ t‚ÇÄ)).symm (((extChartAt I (Œ≥ t‚ÇÄ)) ‚àò Œ≥) t) := by
        rw [comp_apply, PartialEquiv.left_inv]
        exact hsrc t ht
      rw [this]
    ¬∑ intros t ht
      rw [hv', h]
      have := hcrv'.hasDerivAt ht (hsrc' t ht)
      apply this.congr_deriv
      have : Œ≥' t = (extChartAt I (Œ≥' t‚ÇÄ)).symm (((extChartAt I (Œ≥' t‚ÇÄ)) ‚àò Œ≥') t) := by
        rw [comp_apply, PartialEquiv.left_inv]
        exact hsrc' t ht
      rw [this]

  -- finally show `EqOn Œ≥ Œ≥' _` by composing with the inverse of the local chart around `Œ≥ t‚ÇÄ`
  refine EqOn.trans ?_ (EqOn.trans (heqon.comp_left (g := (extChartAt I (Œ≥ t‚ÇÄ)).symm)) ?_)
  ¬∑ intros t ht
    rw [comp_apply, comp_apply, PartialEquiv.left_inv _ (hsrc _ ht)]
  ¬∑ intros t ht
    rw [comp_apply, comp_apply, h, PartialEquiv.left_inv _ (hsrc' _ ht)]

theorem isIntegralCurveAt_eqOn_of_contMDiffAt_boundaryless [BoundarylessManifold I M]
    (hv : ContMDiffAt I I.tangent 1 (fun x ‚Ü¶ (‚ü®x, v x‚ü© : TangentBundle I M)) (Œ≥ t‚ÇÄ))
    (hŒ≥ : IsIntegralCurveAt Œ≥ v t‚ÇÄ) (hŒ≥' : IsIntegralCurveAt Œ≥' v t‚ÇÄ) (h : Œ≥ t‚ÇÄ = Œ≥' t‚ÇÄ) :
    ‚àÉ Œµ > 0, EqOn Œ≥ Œ≥' (Ioo (t‚ÇÄ - Œµ) (t‚ÇÄ + Œµ)) :=
  isIntegralCurveAt_eqOn_of_contMDiffAt (BoundarylessManifold.isInteriorPoint I) hv hŒ≥ hŒ≥' h

variable [T2Space M] {a b : ‚Ñù}

/-- Integral curves are unique on open intervals.

If a $C^1$ vector field `v` admits two integral curves `Œ≥ Œ≥' : ‚Ñù ‚Üí M` on some open interval
`Ioo a b`, and `Œ≥ t‚ÇÄ = Œ≥' t‚ÇÄ` for some `t ‚àà Ioo a b`, then `Œ≥` and `Œ≥'` agree on `Ioo a b`. -/
theorem isIntegralCurveOn_Ioo_eqOn_of_contMDiff (ht‚ÇÄ : t‚ÇÄ ‚àà Ioo a b)
    (hŒ≥t : ‚àÄ t ‚àà Ioo a b, I.IsInteriorPoint (Œ≥ t))
    (hv : ContMDiff I I.tangent 1 (fun x ‚Ü¶ (‚ü®x, v x‚ü© : TangentBundle I M)))
    (hŒ≥ : IsIntegralCurveOn Œ≥ v (Ioo a b)) (hŒ≥' : IsIntegralCurveOn Œ≥' v (Ioo a b))
    (h : Œ≥ t‚ÇÄ = Œ≥' t‚ÇÄ) : EqOn Œ≥ Œ≥' (Ioo a b) := by
  set s := {t | Œ≥ t = Œ≥' t} ‚à© Ioo a b with hs
  -- since `Ioo a b` is connected, we get `s = Ioo a b` by showing that `s` is clopen in `Ioo a b`
  -- in the subtype toplogy (`s` is also non-empty by assumption)
  -- here we use a slightly weaker alternative theorem
  suffices hsub : Ioo a b ‚äÜ s from fun t ht ‚Ü¶ mem_setOf.mp ((subset_def ‚ñ∏ hsub) t ht).1
  apply isPreconnected_Ioo.subset_of_closure_inter_subset (s := Ioo a b) (u := s) _
    ‚ü®t‚ÇÄ, ‚ü®ht‚ÇÄ, ‚ü®h, ht‚ÇÄ‚ü©‚ü©‚ü©
  ¬∑ -- is this really the most convenient way to pass to subtype topology?
    -- TODO: shorten this when better API around subtype topology exists
    rw [hs, ‚Üê Subtype.image_preimage_val, ‚Üê Subtype.image_preimage_val,
      image_subset_image_iff Subtype.val_injective, preimage_setOf_eq]
    intros t ht
    rw [mem_preimage, ‚Üê closure_subtype] at ht
    revert ht t
    apply IsClosed.closure_subset
    apply isClosed_eq
    ¬∑ rw [continuous_iff_continuousAt]
      rintro ‚ü®_, ht‚ü©
      apply ContinuousAt.comp _ continuousAt_subtype_val
      rw [Subtype.coe_mk]
      exact hŒ≥.continuousAt ht
    ¬∑ rw [continuous_iff_continuousAt]
      rintro ‚ü®_, ht‚ü©
      apply ContinuousAt.comp _ continuousAt_subtype_val
      rw [Subtype.coe_mk]
      exact hŒ≥'.continuousAt ht
  ¬∑ rw [isOpen_iff_mem_nhds]
    intro t‚ÇÅ ht‚ÇÅ
    rw [mem_nhds_iff]
    obtain ‚ü®Œµ, hŒµ, heqon‚ü© : ‚àÉ Œµ > 0, EqOn Œ≥ Œ≥' (Ioo (t‚ÇÅ - Œµ) (t‚ÇÅ + Œµ)) :=
      isIntegralCurveAt_eqOn_of_contMDiffAt (hŒ≥t _ ht‚ÇÅ.2) hv.contMDiffAt
        (hŒ≥.isIntegralCurveAt <| Ioo_mem_nhds ht‚ÇÅ.2.1 ht‚ÇÅ.2.2)
        (hŒ≥'.isIntegralCurveAt <| Ioo_mem_nhds ht‚ÇÅ.2.1 ht‚ÇÅ.2.2)
        ht‚ÇÅ.1
    refine ‚ü®Ioo (max a (t‚ÇÅ - Œµ)) (min b (t‚ÇÅ + Œµ)),
      subset_inter
        (fun t ht ‚Ü¶ @heqon t <| mem_of_mem_of_subset ht <| Ioo_subset_Ioo (by simp) (by simp))
        (Ioo_subset_Ioo (by simp) (by simp)),
      isOpen_Ioo, ?_‚ü©
    exact ‚ü®max_lt ht‚ÇÅ.2.1 (by simp [hŒµ]), lt_min ht‚ÇÅ.2.2 (by simp [hŒµ])‚ü©

theorem isIntegralCurveOn_Ioo_eqOn_of_contMDiff_boundaryless [BoundarylessManifold I M]
    (ht‚ÇÄ : t‚ÇÄ ‚àà Ioo a b)
    (hv : ContMDiff I I.tangent 1 (fun x ‚Ü¶ (‚ü®x, v x‚ü© : TangentBundle I M)))
    (hŒ≥ : IsIntegralCurveOn Œ≥ v (Ioo a b)) (hŒ≥' : IsIntegralCurveOn Œ≥' v (Ioo a b))
    (h : Œ≥ t‚ÇÄ = Œ≥' t‚ÇÄ) : EqOn Œ≥ Œ≥' (Ioo a b) :=
  isIntegralCurveOn_Ioo_eqOn_of_contMDiff
    ht‚ÇÄ (fun _ _ ‚Ü¶ BoundarylessManifold.isInteriorPoint I) hv hŒ≥ hŒ≥' h

/-- Global integral curves are unique.

If a continuously differentiable vector field `v` admits two global integral curves
`Œ≥ Œ≥' : ‚Ñù ‚Üí M`, and `Œ≥ t‚ÇÄ = Œ≥' t‚ÇÄ` for some `t‚ÇÄ`, then `Œ≥` and `Œ≥'` are equal. -/
theorem isIntegralCurve_eq_of_contMDiff (hŒ≥t : ‚àÄ t, I.IsInteriorPoint (Œ≥ t))
    (hv : ContMDiff I I.tangent 1 (fun x ‚Ü¶ (‚ü®x, v x‚ü© : TangentBundle I M)))
    (hŒ≥ : IsIntegralCurve Œ≥ v) (hŒ≥' : IsIntegralCurve Œ≥' v) (h : Œ≥ t‚ÇÄ = Œ≥' t‚ÇÄ) : Œ≥ = Œ≥' := by
  ext t
  obtain ‚ü®T, hT, ht‚ü© : ‚àÉ T > 0, t ‚àà Ioo (t‚ÇÄ - T) (t‚ÇÄ + T) := by
    refine ‚ü®|t - t‚ÇÄ| + 1, by positivity, ?_‚ü©
    by_cases ht : t - t‚ÇÄ < 0
    ¬∑ rw [abs_of_neg ht]
      constructor <;> linarith
    ¬∑ rw [abs_of_nonneg (not_lt.mp ht)]
      constructor <;> linarith
  exact isIntegralCurveOn_Ioo_eqOn_of_contMDiff
    (Real.ball_eq_Ioo t‚ÇÄ T ‚ñ∏ Metric.mem_ball_self hT) (fun t _ ‚Ü¶ hŒ≥t t) hv
    ((hŒ≥.isIntegralCurveOn _).mono  (subset_univ _))
    ((hŒ≥'.isIntegralCurveOn _).mono (subset_univ _)) h ht

theorem isIntegralCurve_Ioo_eq_of_contMDiff_boundaryless [BoundarylessManifold I M]
    (hv : ContMDiff I I.tangent 1 (fun x ‚Ü¶ (‚ü®x, v x‚ü© : TangentBundle I M)))
    (hŒ≥ : IsIntegralCurve Œ≥ v) (hŒ≥' : IsIntegralCurve Œ≥' v) (h : Œ≥ t‚ÇÄ = Œ≥' t‚ÇÄ) : Œ≥ = Œ≥' :=
  isIntegralCurve_eq_of_contMDiff (fun _ ‚Ü¶ BoundarylessManifold.isInteriorPoint I) hv hŒ≥ hŒ≥' h

/-- A (global) integral curve is injective iff it is not periodic. -/
lemma IsIntegralCurve.periodic_iff_not_injective [BoundarylessManifold I M]
    (hŒ≥ : IsIntegralCurve Œ≥ v)
    (hv : ContMDiff I I.tangent 1 (fun x => (‚ü®x, v x‚ü© : TangentBundle I M))) :
    (‚àÉ T > 0, Periodic Œ≥ T) ‚Üî ¬¨Injective Œ≥ := by
  constructor
  ¬∑ exact fun ‚ü®T, hT, hf‚ü© ‚Ü¶ hf.not_injective (ne_of_gt hT)
  ¬∑ intro h
    rw [Injective] at h
    push_neg at h
    obtain ‚ü®t‚ÇÅ, t‚ÇÇ, heq, hne‚ü© := h
    refine ‚ü®|t‚ÇÅ - t‚ÇÇ|, ?_, ?_‚ü©
    ¬∑ rw [gt_iff_lt, abs_pos, sub_ne_zero]
      exact hne
    ¬∑ apply congrFun
      by_cases hle : t‚ÇÅ - t‚ÇÇ < 0
      ¬∑ apply isIntegralCurve_Ioo_eq_of_contMDiff_boundaryless (t‚ÇÄ := t‚ÇÅ) hv (hŒ≥.comp_add _) hŒ≥
        simp [abs_of_neg hle, heq]
      ¬∑ apply isIntegralCurve_Ioo_eq_of_contMDiff_boundaryless (t‚ÇÄ := t‚ÇÇ) hv (hŒ≥.comp_add _) hŒ≥
        rw [not_lt] at hle
        simp [abs_of_nonneg hle, heq]

/-- A global integral curve is injective xor periodic. -/
lemma IsIntegralCurve.periodic_xor_injective [BoundarylessManifold I M]
    (hŒ≥ : IsIntegralCurve Œ≥ v)
    (hv : ContMDiff I I.tangent 1 (fun x => (‚ü®x, v x‚ü© : TangentBundle I M))) :
    Xor' (‚àÉ T > 0, Periodic Œ≥ T) (Injective Œ≥) :=
  xor_iff_iff_not.mpr (hŒ≥.periodic_iff_not_injective hv)

