    (x : TopCat.of M) :
    (smoothSheafCommRing.forgetStalk IM I M R x).hom ‚â´ (smoothSheaf.evalHom IM I R x) =
    (forget _).map (smoothSheafCommRing.evalHom _ _ _ _ _) := by
  simp_rw [‚Üê CategoryTheory.Iso.eq_inv_comp]
