lemma mdifferentiableOn_of_coeff [Fintype Œπ] (h : ‚àÄ i, MDiff[u] (hs.coeff i t)) :
    MDiff[u] (T% t) := by
  have this (i) : MDiff[u] (T% (hs.coeff i t ‚Ä¢ s i)) :=
