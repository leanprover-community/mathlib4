lemma hasDerivAt_extChartAt_comp_extChartAt_comp_of_hasDerivAt_tangentCoordChange
    {x‚ÇÄ : M} {f : ‚Ñù ‚Üí E} {t : ‚Ñù} {v : TangentSpace I ((extChartAt I x‚ÇÄ).symm (f t))}
    (hmem : f t ‚àà interior (extChartAt I x‚ÇÄ).target)
