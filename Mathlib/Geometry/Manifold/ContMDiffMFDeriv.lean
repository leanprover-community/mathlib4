    simp only [mfld_simps] at hp
    simp only [mfderivWithin, hf.mdifferentiableOn one_le_n _ hp.2, hp.1, if_pos, mfld_simps]
    rfl
  have D :
    ContDiffOn ùïú m (fun x => fderivWithin ùïú (I' ‚àò f ‚àò I.symm) (I.symm ‚Åª¬π' s ‚à© range I) x)
