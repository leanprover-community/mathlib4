  have h‚ÇÄ : ContDiff ‚Ñù ‚ä§ fun w : E => ‚Äñw‚Äñ ^ 2 := contDiff_norm_sq ‚Ñù
  have h‚ÇÅ : ContDiff ‚Ñù ‚ä§ fun w : E => (‚Äñw‚Äñ ^ 2 + 4)‚Åª¬π := by
    refine (h‚ÇÄ.add contDiff_const).inv ?_
