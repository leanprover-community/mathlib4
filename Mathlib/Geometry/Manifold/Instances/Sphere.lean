    HasFDerivAt (stereoInvFunAux v) (ContinuousLinearMap.id ‚Ñù E) 0 := by
  have h‚ÇÄ : HasFDerivAt (fun w : E => ‚Äñw‚Äñ ^ 2) (0 : E ‚ÜíL[‚Ñù] ‚Ñù) 0 := by
    convert (hasStrictFDerivAt_norm_sq (0 : E)).hasFDerivAt
