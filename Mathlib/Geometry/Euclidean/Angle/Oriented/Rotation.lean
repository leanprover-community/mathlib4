  haveI : Nontrivial V :=
    FiniteDimensional.nontrivial_of_finrank_eq_succ (@Fact.out (finrank ‚Ñù V = 2) _)
  obtain ‚ü®x, hx‚ü© : ‚àÉ x, x ‚â† (0 : V) := exists_ne (0 : V)
  rw [o.rotation_eq_matrix_toLin Œ∏ hx]
  simpa [sq] using Œ∏.cos_sq_add_sin_sq
