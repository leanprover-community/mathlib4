    {Œ∑ Œ∑' : f ‚ü∂ g} {Œ∏ Œ∏' : g ‚ü∂ h} {Œπ : f ‚ü∂ h}
    (pf_Œ∑ : Œ∑ = Œ∑') (pf_Œ∏ : Œ∏ = Œ∏') (pf_Œ∑Œ∏ : Œ∑' ‚â´ Œ∏' = Œπ) :
    Œ∑ ‚â´ Œ∏ = Œπ := by
  simp [pf_Œ∑, pf_Œ∏, pf_Œ∑Œ∏]

theorem eval_whiskerLeft
