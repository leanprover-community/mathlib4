/-- Evaluate the expression of a 2-morphism into a normalized form. -/
partial def eval (e : Expr) : BicategoryM Result := do
  if let .some Œ± ‚Üê structuralAtom? e then
    return ‚ü®.nil <| .atom Œ±, ‚Üê mkEqRefl (‚Üê Œ±.e)‚ü©
  else
    match (‚Üê whnfR e).getAppFnArgs with
    | (``CategoryStruct.id, #[_, _, f]) =>
      return ‚ü®.nil (.id (‚Üê toMor‚ÇÅ f)), ‚Üê mkEqRefl (‚Üê mkId‚ÇÇ f)‚ü©
    | (``CategoryStruct.comp, #[_, _, _, _, _, Œ∑, Œ∏]) =>
      withTraceNode `bicategory (fun _ => return m!"comp") do
        let ‚ü®Œ∑', pf_Œ∑‚ü© ‚Üê eval Œ∑
        let ‚ü®Œ∏', pf_Œ∏‚ü© ‚Üê eval Œ∏
        let ‚ü®Œ∑Œ∏, pf‚ü© ‚Üê evalComp Œ∑' Œ∏'
        let result ‚Üê mkAppM ``eval_comp #[pf_Œ∑, pf_Œ∏, pf]
        trace[bicategory] m!"{checkEmoji} {‚Üê inferType result}"
        return ‚ü®Œ∑Œ∏, result‚ü©
    | (``Bicategory.whiskerLeft, #[_, _, _, _, _, f, _, _, Œ∑]) =>
      withTraceNode `bicategory (fun _ => return m!"whiskerLeft") do
        let ‚ü®Œ∑', pf_Œ∑‚ü© ‚Üê eval Œ∑
        let ‚ü®Œ∏, pf_Œ∏‚ü© ‚Üê evalWhiskerLeftExpr (‚Üê toMor‚ÇÅ f) Œ∑'
        let result ‚Üê mkAppM ``eval_whiskerLeft #[pf_Œ∑, pf_Œ∏]
        trace[bicategory] m!"{checkEmoji} {‚Üê inferType result}"
        return ‚ü®Œ∏, result‚ü©
    | (``Bicategory.whiskerRight, #[_, _, _, _, _, _, _, Œ∑, h]) =>
      withTraceNode `bicategory (fun _ => return m!"whiskerRight") do
        let ‚ü®Œ∑', pf_Œ∑‚ü© ‚Üê eval Œ∑
        let ‚ü®Œ∏, pf_Œ∏‚ü© ‚Üê evalWhiskerRightExpr Œ∑' (‚Üê toMor‚ÇÅ h)
        let result ‚Üê mkAppM ``eval_whiskerRight #[pf_Œ∑, pf_Œ∏]
        trace[bicategory] m!"{checkEmoji} {‚Üê inferType result}"
        return ‚ü®Œ∏, result‚ü©
    | (``bicategoricalComp, #[_, _, _, _, _, _, _, _, _, Œ∑, Œ∏]) =>
      withTraceNode `bicategory (fun _ => return m!"bicategoricalComp") do
        let ‚ü®Œ∑', pf_Œ∑‚ü© ‚Üê eval Œ∑
        let Œ±‚ÇÄ ‚Üê structuralOfBicategoricalComp e
        let Œ± := NormalExpr.nil Œ±‚ÇÄ
        let ‚ü®Œ∏', pf_Œ∏‚ü© ‚Üê eval Œ∏
        let ‚ü®Œ±Œ∏, pf_Œ∏Œ±‚ü© ‚Üê evalComp Œ± Œ∏'
        let ‚ü®Œ∑Œ±Œ∏, pf_Œ∑Œ±Œ∏‚ü© ‚Üê evalComp Œ∑' Œ±Œ∏
        let result ‚Üê mkAppM ``eval_bicategoricalComp #[pf_Œ∑, pf_Œ∏, pf_Œ∏Œ±, pf_Œ∑Œ±Œ∏]
        trace[bicategory] m!"{checkEmoji} {‚Üê inferType result}"
        return ‚ü®Œ∑Œ±Œ∏, result‚ü©
    | _ =>
      let result ‚Üê mkAppM ``eval_of #[e]
      trace[bicategory] m!"{checkEmoji} {‚Üê inferType result}"
      return ‚ü®‚Üê NormalExpr.ofExpr e, result‚ü©

