    let Œ∑' := .cons (.whiskerRight Œ± (.of f)) (.of (.whisker Œ∑ f)) Œ∏
    let pf ‚Üê mkAppM ``evalWhiskerRight_cons_of_of #[‚Üê Œ±.e, ‚Üê Œ∑.e, pf_Œ∏]
