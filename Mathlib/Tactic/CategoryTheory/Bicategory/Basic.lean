  let hom_ab ‚Üê mkHom‚ÇÅ a b
  let f ‚Üê mkFreshExprMVar hom_ab
  let g ‚Üê mkFreshExprMVar hom_ab
  let h ‚Üê mkFreshExprMVar hom_ab
  let i ‚Üê mkFreshExprMVar hom_ab
  let Œ∑ ‚Üê mkFreshExprMVar (‚Üê mkHom‚ÇÇ f g)
  let Œ±‚ÇÄ ‚Üê mkFreshExprMVar (‚Üê mkHom‚ÇÇ g h)
  let Œ∏ ‚Üê mkFreshExprMVar (‚Üê mkHom‚ÇÇ h i)
  let Œ±Œ∏ ‚Üê mkComp‚ÇÇ Œ±‚ÇÄ Œ∏
  let Œ∑Œ±Œ∏ ‚Üê mkComp‚ÇÇ Œ∑ Œ±Œ∏
  _ ‚Üê isDefEq e Œ∑Œ±Œ∏
