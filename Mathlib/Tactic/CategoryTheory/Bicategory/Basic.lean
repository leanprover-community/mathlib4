  | .associator f g h => f.comp (g.comp h)
  | .associatorInv f g h => (f.comp g).comp h
  | .leftUnitor f => f
  | .leftUnitorInv f => (Mor‚ÇÅ.id f.src).comp f
  | .rightUnitor f => f
  | .rightUnitorInv f => f.comp (Mor‚ÇÅ.id f.tgt)
