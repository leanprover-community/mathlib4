    (hu : IsUniform X s ‚Ñô Œº) {A : Set E} (hA : MeasurableSet A) :
    ‚Ñô (X ‚Åª¬π' A) = Œº (s ‚à© A) / Œº s := by
  rw [‚Üê map_apply_of_aemeasurable (hu.aemeasurable hns hnt) hA, hu, smul_apply, restrict_apply hA,
    ENNReal.div_eq_inv_mul, smul_eq_mul, Set.inter_comm]
