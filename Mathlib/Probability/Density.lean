#align measure_theory.pdf.of_real_to_real_ae_eq MeasureTheory.pdf.ofReal_toReal_ae_eq

theorem integrable_iff_integrable_mul_pdf [IsFiniteMeasure ‚Ñô] {X : Œ© ‚Üí E} [HasPdf X ‚Ñô Œº] {f : E ‚Üí ‚Ñù}
    (hf : Measurable f) :
    Integrable (fun x => f (X x)) ‚Ñô ‚Üî Integrable (fun x => f x * (pdf X ‚Ñô Œº x).toReal) Œº :=
  by
  rw [‚Üê integrable_map_measure hf.ae_strongly_measurable (has_pdf.measurable X ‚Ñô Œº).AEMeasurable,
    map_eq_with_density_pdf X ‚Ñô Œº, integrable_with_density_iff (measurable_pdf _ _ _) ae_lt_top]
  infer_instance
#align measure_theory.pdf.integrable_iff_integrable_mul_pdf MeasureTheory.pdf.integrable_iff_integrable_mul_pdf

/-- **The Law of the Unconscious Statistician**: Given a random variable `X` and a measurable
function `f`, `f ‚àò X` is a random variable with expectation `‚à´ x, f x * pdf X ‚àÇŒº`
where `Œº` is a measure on the codomain of `X`. -/
theorem integral_fun_mul_eq_integral [IsFiniteMeasure ‚Ñô] {X : Œ© ‚Üí E} [HasPdf X ‚Ñô Œº] {f : E ‚Üí ‚Ñù}
    (hf : Measurable f) : ‚à´ x, f x * (pdf X ‚Ñô Œº x).toReal ‚àÇŒº = ‚à´ x, f (X x) ‚àÇ‚Ñô :=
  by
  by_cases hpdf : integrable (fun x => f x * (pdf X ‚Ñô Œº x).toReal) Œº
  ¬∑ rw [‚Üê integral_map (has_pdf.measurable X ‚Ñô Œº).AEMeasurable hf.ae_strongly_measurable,
      map_eq_with_density_pdf X ‚Ñô Œº, integral_eq_lintegral_pos_part_sub_lintegral_neg_part hpdf,
      integral_eq_lintegral_pos_part_sub_lintegral_neg_part,
      lintegral_with_density_eq_lintegral_mul _ (measurable_pdf X ‚Ñô Œº) hf.neg.ennreal_of_real,
      lintegral_with_density_eq_lintegral_mul _ (measurable_pdf X ‚Ñô Œº) hf.ennreal_of_real]
    ¬∑ congr 2
      ¬∑ have :
          ‚àÄ x,
            ENNReal.ofReal (f x * (pdf X ‚Ñô Œº x).toReal) =
              ENNReal.ofReal (pdf X ‚Ñô Œº x).toReal * ENNReal.ofReal (f x) :=
          by
          intro x
          rw [mul_comm, ENNReal.ofReal_mul ENNReal.toReal_nonneg]
        simp_rw [this]
        exact lintegral_congr_ae (Filter.EventuallyEq.mul of_real_to_real_ae_eq (ae_eq_refl _))
      ¬∑ have :
          ‚àÄ x,
            ENNReal.ofReal (-(f x * (pdf X ‚Ñô Œº x).toReal)) =
              ENNReal.ofReal (pdf X ‚Ñô Œº x).toReal * ENNReal.ofReal (-f x) :=
          by
          intro x
          rw [neg_mul_eq_neg_mul, mul_comm, ENNReal.ofReal_mul ENNReal.toReal_nonneg]
        simp_rw [this]
        exact lintegral_congr_ae (Filter.EventuallyEq.mul of_real_to_real_ae_eq (ae_eq_refl _))
    ¬∑ refine' ‚ü®hf.ae_strongly_measurable, _‚ü©
      rw [has_finite_integral,
        lintegral_with_density_eq_lintegral_mul _ (measurable_pdf _ _ _)
          hf.nnnorm.coe_nnreal_ennreal]
      have :
        (fun x => (pdf X ‚Ñô Œº * fun x => ‚Üë‚Äñf x‚Äñ‚Çä) x) =·µê[Œº] fun x => ‚Äñf x * (pdf X ‚Ñô Œº x).toReal‚Äñ‚Çä :=
        by
        simp_rw [‚Üê smul_eq_mul, nnnorm_smul, ENNReal.coe_mul]
        rw [smul_eq_mul, mul_comm]
        refine' Filter.EventuallyEq.mul (ae_eq_refl _) (ae_eq_trans of_real_to_real_ae_eq.symm _)
        convert ae_eq_refl _
        ext1 x
        exact Real.ennnorm_eq_ofReal ENNReal.toReal_nonneg
      rw [lintegral_congr_ae this]
      exact hpdf.2
  ¬∑ rw [integral_undef hpdf, integral_undef]
    rwa [‚Üê integrable_iff_integrable_mul_pdf hf] at hpdf 
    all_goals infer_instance
#align measure_theory.pdf.integral_fun_mul_eq_integral MeasureTheory.pdf.integral_fun_mul_eq_integral

