class HasPDF {m : MeasurableSpace Œ©} (X : Œ© ‚Üí E) (‚Ñô : Measure Œ©) (Œº : Measure E := by volume_tac) :
    Prop where
  protected aemeasurable' : AEMeasurable X ‚Ñô
