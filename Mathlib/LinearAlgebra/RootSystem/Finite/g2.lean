@[simp] lemma pairingIn_threeShortAddLong_left :
    P.pairingIn ‚Ñ§ (threeShortAddLong P) i =
      3 * P.pairingIn ‚Ñ§ (short P) i + P.pairingIn ‚Ñ§ (long P) i := by
