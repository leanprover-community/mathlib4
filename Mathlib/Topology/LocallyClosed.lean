alias ‚ü®IsLocallyClosed.isOpen_coborder, _‚ü© := isLocallyClosed_iff_isOpen_coborder

lemma IsLocallyClosed.isOpen_preimage_val_closure (hs : IsLocallyClosed s) :
    IsOpen (closure s ‚Üì‚à© s) :=
