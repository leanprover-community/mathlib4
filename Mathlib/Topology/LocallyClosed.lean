lemma Continuous.preimage_coborder_subset (hf : Continuous f) (s : Set Y) :
    f ‚Åª¬π' (coborder s) ‚äÜ coborder (f ‚Åª¬π' s) := by
  rw [coborder, coborder, preimage_compl, preimage_diff, compl_subset_compl]
