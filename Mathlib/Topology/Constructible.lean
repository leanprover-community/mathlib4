/-! ### Locally constructible sets -/

/-- A set in a topological space is locally constructible, if it can be partitioned along an open
cover such that every part is constructible -/
@[stacks 005G]
def IsLocallyConstructible (s : Set X) : Prop :=
  ‚àÉ ùí∞ : Set (Set X),
    (‚àÄ x, ‚àÉ U ‚àà ùí∞, x ‚àà U) ‚àß (‚àÄ U ‚àà ùí∞, IsOpen U) ‚àß ‚àÄ U ‚àà ùí∞, IsConstructible (s ‚à© U)

lemma IsLocallyConstructible.of_iUnion {Œπ : Sort*} {f : Œπ ‚Üí Set X} (cover : ‚àÄ x, ‚àÉ i, x ‚àà f i)
    (isOpen : ‚àÄ i, IsOpen (f i)) (constructible : ‚àÄ i, IsConstructible (s ‚à© f i)) :
    IsLocallyConstructible s := ‚ü®range f, by simpa, by simpa, by simpa‚ü©

lemma IsConstructible.isLocallyConstructible (hs : IsConstructible s) : IsLocallyConstructible s :=
  ‚ü®{univ}, by simpa‚ü©

lemma IsRetroCompact.isLocallyConstructible (hUopen : IsOpen U) (hUcomp : IsRetroCompact U) :
    IsLocallyConstructible U := (hUcomp.isConstructible hUopen).isLocallyConstructible

@[simp] protected lemma IsLocallyConstructible.empty : IsLocallyConstructible (‚àÖ : Set X) :=
  IsConstructible.empty.isLocallyConstructible

@[simp] protected lemma IsLocallyConstructible.univ : IsLocallyConstructible (univ : Set X) :=
  IsConstructible.univ.isLocallyConstructible

lemma IsLocallyConstructible.inter :
    IsLocallyConstructible s ‚Üí IsLocallyConstructible t ‚Üí IsLocallyConstructible (s ‚à© t) := by
  rintro ‚ü®F, hFcov, hFopen, hFcons‚ü© ‚ü®G, hGcov, hGopen, hGcons‚ü©
  refine .of_iUnion (f := fun ((U, V) : F √ó G) ‚Ü¶ U.1 ‚à© V.1) (fun x ‚Ü¶ ?_)
    (fun (‚ü®U, hU‚ü©, ‚ü®V, hV‚ü©) ‚Ü¶ (hFopen _ hU).inter (hGopen _ hV)) fun (‚ü®U, hU‚ü©, ‚ü®V, hV‚ü©) ‚Ü¶ ?_
  ¬∑ obtain ‚ü®U, hU, hxU‚ü© := hFcov x
    obtain ‚ü®V, hV, hxV‚ü© := hGcov x
    exact ‚ü®(‚ü®U, hU‚ü©, ‚ü®V, hV‚ü©), hxU, hxV‚ü©
  ¬∑ rw [inter_inter_inter_comm]
    exact (hFcons _ hU).inter (hGcons _ hV)

