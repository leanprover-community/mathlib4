/-- Cantor's intersection theorem:
the intersection of a directed family of nonempty compact closed sets is nonempty. -/
theorem IsCompact.nonempty_inter·µ¢_of_directed_nonempty_compact_closed {Œπ : Type v} [hŒπ : Nonempty Œπ]
    (Z : Œπ ‚Üí Set Œ±) (hZd : Directed (¬∑ ‚äá ¬∑) Z) (hZn : ‚àÄ i, (Z i).Nonempty)
    (hZc : ‚àÄ i, IsCompact (Z i)) (hZcl : ‚àÄ i, IsClosed (Z i)) : (‚ãÇ i, Z i).Nonempty :=
  by
  apply hŒπ.elim
  intro i‚ÇÄ
  let Z' i := Z i ‚à© Z i‚ÇÄ
  suffices (‚ãÇ i, Z' i).Nonempty by
    exact this.mono (Inter_mono fun i => inter_subset_left (Z i) (Z i‚ÇÄ))
  rw [nonempty_iff_ne_empty]
