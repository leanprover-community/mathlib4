abbrev IsConstantOn (U : Opens B) : Prop :=
  ‚àÄ (b‚ÇÄ : U) (x : F b‚ÇÄ), ‚àÉ! s : Œ† b : U, F b, P s ‚àß s b‚ÇÄ = x

