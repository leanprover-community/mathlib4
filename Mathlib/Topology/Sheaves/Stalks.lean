@[ext]
theorem stalk_hom_ext (F : X.Presheaf C) {x} {Y : C} {f‚ÇÅ f‚ÇÇ : F.stalk x ‚ü∂ Y}
    (ih : ‚àÄ (U : Opens X) (hxU : x ‚àà U), F.germ U x hxU ‚â´ f‚ÇÅ = F.germ U x hxU ‚â´ f‚ÇÇ) : f‚ÇÅ = f‚ÇÇ :=
  colimit.hom_ext fun U => by
