#align holder_with.nndist_le_of_le HolderWith.nndist_le_of_le

theorem nndist_le (hf : HolderWith C r f) (x y : X) :
    nndist (f x) (f y) ‚â§ C * nndist x y ^ (r : ‚Ñù) :=
  hf.nndist_le_of_le le_rfl
