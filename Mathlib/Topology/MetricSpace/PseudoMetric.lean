theorem PseudoMetricSpace.ext {Œ± : Type*} {m m' : PseudoMetricSpace Œ±}
    (h : m.toDist = m'.toDist) : m = m' := by
  cases' m with d _ _ _ ed hed U hU B hB
  cases' m' with d' _ _ _ ed' hed' U' hU' B' hB'
  obtain rfl : d = d' := h
  congr
  ¬∑ ext x y : 2
