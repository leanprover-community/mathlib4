  ¬∑ exact UniformSpace.ext (hU.trans hU'.symm)
  ¬∑ ext : 2
    rw [‚Üê Filter.mem_sets, ‚Üê Filter.mem_sets, hB, hB']
#align pseudo_metric_space.ext PseudoMetricSpace.ext

