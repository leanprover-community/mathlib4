theorem dimH_sUnion {S : Set (Set X)} (hS : S.Countable) : dimH (‚ãÉ‚ÇÄ S) = ‚®Ü s ‚àà S, dimH s := by
  rw [sUnion_eq_biUnion, dimH_bUnion hS]

