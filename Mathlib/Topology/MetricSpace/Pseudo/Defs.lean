    (dist_self : ‚àÄ x : Œ±, dist x x = 0) (dist_comm : ‚àÄ x y : Œ±, dist x y = dist y x)
    (dist_triangle : ‚àÄ x y z : Œ±, dist x z ‚â§ dist x y + dist y z) : 0 ‚â§ dist x y :=
  have : 0 ‚â§ 2 * dist x y :=
