    rw [hf.toInducing.nhds_eq_comap]
    exact (compact_basis_nhds _).comap _
  .of_hasBasis this fun x s hs => hf.isCompact_preimage hs.2
#align closed_embedding.locally_compact_space ClosedEmbedding.locallyCompactSpace

