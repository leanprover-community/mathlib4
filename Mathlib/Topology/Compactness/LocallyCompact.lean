instance (priority := 900) [LocallyCompactSpace X] : LocallyCompactPair X Y where
  exists_mem_nhds_isCompact_mapsTo hf hs :=
    let ‚ü®K, hKx, hKs, hKc‚ü© := local_compact_nhds (hf.continuousAt hs); ‚ü®K, hKx, hKc, hKs‚ü©

