  V ‚à© Prod.swap ‚Åª¬π' V

theorem symmetric_symmetrizeRel (V : Set (Œ± √ó Œ±)) : SymmetricRel (symmetrizeRel V) := by
  simp [SymmetricRel, symmetrizeRel, preimage_inter, inter_comm, ‚Üê preimage_comp]

