structure UniformSpace.Core (Œ± : Type u) where
  /-- The uniformity filter. Once `UniformSpace` is defined, `ùì§ Œ±` (`_root_.uniformity`) becomes the
  normal form. -/
  uniformity : Filter (Œ± √ó Œ±)
