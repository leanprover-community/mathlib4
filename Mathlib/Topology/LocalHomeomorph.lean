    LocalHomeomorph Œ± Œ≤ where
  toLocalEquiv := e'
  open_source := h ‚ñ∏ e.open_source
  open_target := h ‚ñ∏ e.open_target
  continuous_toFun := h ‚ñ∏ e.continuous_toFun
