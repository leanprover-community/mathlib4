    ¬∑ exact isClopen_biInter_finset fun s _ => s.2.1
    ¬∑ exact mem_iInter‚ÇÇ.2 fun s _ => s.2.2
    ¬∑ rwa [‚Üê disjoint_compl_left_iff_subset, disjoint_iff_inter_eq_empty,
        ‚Üê not_nonempty_iff_eq_empty]
