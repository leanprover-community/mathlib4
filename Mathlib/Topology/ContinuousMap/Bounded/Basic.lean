    fun h =>
    Metric.tendsto_nhds.mpr fun _ Œµ_pos =>
      (h _ (dist_mem_uniformity <| half_pos Œµ_pos)).mp
        (Eventually.of_forall fun n hn =>
          lt_of_le_of_lt
            ((dist_le (half_pos Œµ_pos).le).mpr fun x => dist_comm (f x) (F n x) ‚ñ∏ le_of_lt (hn x))
            (half_lt_self Œµ_pos))

