    (hf : IsOpenEmbedding f) : Function.Injective hf.isOpenMap.functor.obj :=
  fun _ _ e ‚Ü¶ Opens.ext (Set.image_injective.mpr hf.injective (congr_arg (‚Üë¬∑ : Opens Y ‚Üí Set Y) e))

