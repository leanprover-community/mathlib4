    exact hfx (not_mem_set_of_ideal.mp (mt (@h x) hx) hf)
  ¬∑ obtain ‚ü®f, hf, hfx‚ü© := mem_set_of_ideal.mp hx
    by_contra hx'
    exact not_mem_ideal_of_set.mpr ‚ü®x, hx', hfx‚ü© (h hf)
#align continuous_map.ideal_gc ContinuousMap.ideal_gc

