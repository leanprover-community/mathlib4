@[simp]
theorem setOfIdeal_of_set_eq_interior (s : Set X) : setOfIdeal (idealOfSet ùïú s) = interior s :=
  by
  refine'
    Set.Subset.antisymm
      ((set_of_ideal_open (ideal_of_set ùïú s)).subset_interior_iff.mpr fun x hx =>
        let ‚ü®f, hf, hfx‚ü© := mem_set_of_ideal.mp hx
