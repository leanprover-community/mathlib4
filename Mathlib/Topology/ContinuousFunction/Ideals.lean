    idealOfSet ùïú (setOfIdeal I) = I.closure :=
  by
  /- Since `ideal_of_set ùïú (set_of_ideal I)` is closed and contains `I`, it contains `I.closure`.
    For the reverse inclusion, given `f ‚àà ideal_of_set ùïú (set_of_ideal I)` and `(Œµ : ‚Ñù‚â•0) > 0` it
    suffices to show that `f` is within `Œµ` of `I`.-/
  refine'
    le_antisymm (fun f hf => metric.mem_closure_iff.mpr fun Œµ hŒµ => _)
      ((ideal_of_set_closed ùïú <| set_of_ideal I).closure_subset_iff.mpr fun f hf x hx =>
        not_mem_set_of_ideal.mp hx hf)
  lift Œµ to ‚Ñù‚â•0 using hŒµ.lt.le
  replace hŒµ := show (0 : ‚Ñù‚â•0) < Œµ from hŒµ
  simp_rw [dist_nndist]
  norm_cast
  -- Let `t := {x : X | Œµ / 2 ‚â§ ‚Äñf x‚Äñ‚Çä}}` which is closed and disjoint from `set_of_ideal I`.
  set t := {x : X | Œµ / 2 ‚â§ ‚Äñf x‚Äñ‚Çä}
  have ht : IsClosed t := isClosed_le continuous_const (map_continuous f).nnnorm
  have htI : Disjoint t (set_of_ideal I·∂ú) :=
    by
    refine' set.subset_compl_iff_disjoint_left.mp fun x hx => _
    simpa only [t, Set.mem_setOf, Set.mem_compl_iff, not_le] using
