  simp only [Multipliable, Pi.hasProd, Classical.skolem]

@[to_additive]
theorem tprod_apply [‚àÄ x, T2Space (œÄ x)] {f : Œπ ‚Üí ‚àÄ x, œÄ x} {x : Œ±} (hf : Multipliable f) :
    (‚àè' i, f i) x = ‚àè' i, f i x :=
  (Pi.hasProd.mp hf.hasProd x).tprod_eq.symm

end Pi


