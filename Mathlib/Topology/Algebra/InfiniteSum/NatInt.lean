@[to_additive]
theorem hasProd_nat_add_iff {f : ‚Ñï ‚Üí G} (k : ‚Ñï) :
    HasProd (fun n ‚Ü¶ f (n + k)) g ‚Üî HasProd f (g * ‚àè i in range k, f i) := by
  refine Iff.trans ?_ (range k).hasProd_compl_iff
