@[to_additive HasSum.of_nat_of_neg_add_one]
lemma HasProd.of_nat_of_neg_add_one {f : ‚Ñ§ ‚Üí M}
    (hf‚ÇÅ : HasProd (fun n : ‚Ñï ‚Ü¶ f n) m) (hf‚ÇÇ : HasProd (fun n : ‚Ñï ‚Ü¶ f (-(n + 1))) m') :
