  iff_hasBasis_zero.trans <| HasBasis.to_hasBasis_iff
    (fun Œ≥ _ ‚Ü¶ ‚ü®Œ≥, Œ≥.ne_zero, subset_rfl‚ü©)
    (fun _ h ‚Ü¶ ‚ü®Units.mk0 _ h, trivial, subset_rfl‚ü©)

