  f.single_mul_apply_aux r fun a ha => by rw [one_mul]

@[to_additive (dont_translate := k) single_mul_apply_of_not_exists_add]
theorem single_mul_apply_of_not_exists_mul [Mul G] (r : k) {g g' : G} (x : MonoidAlgebra k G)
