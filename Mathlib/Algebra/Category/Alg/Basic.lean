/-- Build an isomorphism in the category `Alg R` from a `AlgEquiv` between `Algebra`s. -/
@[simps]
def AlgEquiv.toAlgebraIso {g‚ÇÅ : Ring X‚ÇÅ} {g‚ÇÇ : Ring X‚ÇÇ} {m‚ÇÅ : Algebra R X‚ÇÅ} {m‚ÇÇ : Algebra R X‚ÇÇ}
    (e : X‚ÇÅ ‚âÉ‚Çê[R] X‚ÇÇ) : Alg.of R X‚ÇÅ ‚âÖ Alg.of R X‚ÇÇ where
  hom := Alg.ofHom (e : X‚ÇÅ ‚Üí‚Çê[R] X‚ÇÇ)
  inv := Alg.ofHom (e.symm : X‚ÇÇ ‚Üí‚Çê[R] X‚ÇÅ)

namespace CategoryTheory.Iso

/-- Build a `AlgEquiv` from an isomorphism in the category `Alg R`. -/
@[simps]
def toAlgEquiv {X Y : Alg R} (i : X ‚âÖ Y) : X ‚âÉ‚Çê[R] Y :=
  { i.hom.hom with
    toFun := i.hom
    invFun := i.inv
    left_inv := fun x ‚Ü¶ by simp
    right_inv := fun x ‚Ü¶ by simp }

end CategoryTheory.Iso

/-- Algebra equivalences between `Algebra`s are the same as (isomorphic to) isomorphisms in
`Alg`. -/
@[simps]
def algEquivIsoAlgebraIso {X Y : Type u} [Ring X] [Ring Y] [Algebra R X] [Algebra R Y] :
    (X ‚âÉ‚Çê[R] Y) ‚âÖ Alg.of R X ‚âÖ Alg.of R Y where
  hom e := e.toAlgebraIso
  inv i := i.toAlgEquiv

instance Alg.forget_reflects_isos : (forget (Alg.{u} R)).ReflectsIsomorphisms where
  reflects {X Y} f _ := by
    let i := asIso ((forget (Alg.{u} R)).map f)
    let e : X ‚âÉ‚Çê[R] Y := { f.hom, i.toEquiv with }
    exact e.toAlgebraIso.isIso_hom
