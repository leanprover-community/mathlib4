/-!
# Category instance for algebras over a commutative ring

We introduce the bundled category `Alg` of algebras over a fixed commutative ring `R` along
with the forgetful functors to `RingCat` and `ModuleCat`. We furthermore show that the functor
associating to a type the free `R`-algebra on that type is left adjoint to the forgetful functor.
-/

open CategoryTheory Limits

universe v u

variable (R : Type u) [CommRing R]

/-- The category of R-algebras and their morphisms. -/
structure Alg where
  private mk ::
  /-- The underlying type. -/
  carrier : Type v
  [isRing : Ring carrier]
  [isAlgebra : Algebra R carrier]

attribute [instance] Alg.isRing Alg.isAlgebra

initialize_simps_projections Alg (-isRing, -isAlgebra)

namespace Alg

instance : CoeSort (Alg R) (Type v) :=
  ‚ü®Alg.carrier‚ü©

attribute [coe] Alg.carrier

/-- The object in the category of R-algebras associated to a type equipped with the appropriate
typeclasses. This is the preferred way to construct a term of `Alg R`. -/
abbrev of (X : Type v) [Ring X] [Algebra R X] : Alg.{v} R :=
  ‚ü®X‚ü©

lemma coe_of (X : Type v) [Ring X] [Algebra R X] : (of R X : Type v) = X :=
  rfl

variable {R} in
/-- The type of morphisms in `Alg R`. -/
@[ext]
structure Hom (A B : Alg.{v} R) where
  private mk ::
  /-- The underlying algebra map. -/
  hom' : A ‚Üí‚Çê[R] B

instance : Category (Alg.{v} R) where
  Hom A B := Hom A B
  id A := ‚ü®AlgHom.id R A‚ü©
  comp f g := ‚ü®g.hom'.comp f.hom'‚ü©

instance : ConcreteCategory (Alg.{v} R) (¬∑ ‚Üí‚Çê[R] ¬∑) where
  hom := Hom.hom'
  ofHom := Hom.mk

variable {R} in
/-- Turn a morphism in `Alg` back into an `AlgHom`. -/
abbrev Hom.hom {A B : Alg.{v} R} (f : Hom A B) :=
  ConcreteCategory.hom (C := Alg R) f

variable {R} in
/-- Typecheck an `AlgHom` as a morphism in `Alg`. -/
abbrev ofHom {A B : Type v} [Ring A] [Ring B] [Algebra R A] [Algebra R B] (f : A ‚Üí‚Çê[R] B) :
    of R A ‚ü∂ of R B :=
  ConcreteCategory.ofHom (C := Alg R) f

variable {R} in
/-- Use the `ConcreteCategory.hom` projection for `@[simps]` lemmas. -/
def Hom.Simps.hom (A B : Alg.{v} R) (f : Hom A B) :=
  f.hom

initialize_simps_projections Hom (hom' ‚Üí hom)

/-!
The results below duplicate the `ConcreteCategory` simp lemmas, but we can keep them for `dsimp`.
-/

@[simp]
lemma hom_id {A : Alg.{v} R} : (ùüô A : A ‚ü∂ A).hom = AlgHom.id R A := rfl

/- Provided for rewriting. -/
lemma id_apply (A : Alg.{v} R) (a : A) :
    (ùüô A : A ‚ü∂ A) a = a := by simp

@[simp]
lemma hom_comp {A B C : Alg.{v} R} (f : A ‚ü∂ B) (g : B ‚ü∂ C) :
    (f ‚â´ g).hom = g.hom.comp f.hom := rfl

/- Provided for rewriting. -/
lemma comp_apply {A B C : Alg.{v} R} (f : A ‚ü∂ B) (g : B ‚ü∂ C) (a : A) :
    (f ‚â´ g) a = g (f a) := by simp

@[ext]
lemma hom_ext {A B : Alg.{v} R} {f g : A ‚ü∂ B} (hf : f.hom = g.hom) : f = g :=
  Hom.ext hf

@[simp]
lemma hom_ofHom {R : Type u} [CommRing R] {X Y : Type v} [Ring X] [Algebra R X] [Ring Y]
    [Algebra R Y] (f : X ‚Üí‚Çê[R] Y) : (ofHom f).hom = f := rfl

@[simp]
lemma ofHom_hom {A B : Alg.{v} R} (f : A ‚ü∂ B) :
    ofHom (Hom.hom f) = f := rfl

@[simp]
lemma ofHom_id {X : Type v} [Ring X] [Algebra R X] : ofHom (AlgHom.id R X) = ùüô (of R X) := rfl

@[simp]
lemma ofHom_comp {X Y Z : Type v} [Ring X] [Ring Y] [Ring Z] [Algebra R X] [Algebra R Y]
    [Algebra R Z] (f : X ‚Üí‚Çê[R] Y) (g : Y ‚Üí‚Çê[R] Z) :
    ofHom (g.comp f) = ofHom f ‚â´ ofHom g :=
  rfl

lemma ofHom_apply {R : Type u} [CommRing R] {X Y : Type v} [Ring X] [Algebra R X] [Ring Y]
    [Algebra R Y] (f : X ‚Üí‚Çê[R] Y) (x : X) : ofHom f x = f x := rfl

lemma inv_hom_apply {A B : Alg.{v} R} (e : A ‚âÖ B) (x : A) : e.inv (e.hom x) = x := by
  rw [‚Üê comp_apply]
  simp

lemma hom_inv_apply {A B : Alg.{v} R} (e : A ‚âÖ B) (x : B) : e.hom (e.inv x) = x := by
  rw [‚Üê comp_apply]
  simp

instance : Inhabited (Alg R) :=
  ‚ü®of R R‚ü©

lemma forget_obj {A : Alg.{v} R} : (forget (Alg.{v} R)).obj A = A := rfl

lemma forget_map {A B : Alg.{v} R} (f : A ‚ü∂ B) :
    (forget (Alg.{v} R)).map f = f :=
  rfl

instance {S : Alg.{v} R} : Ring ((forget (Alg R)).obj S) :=
  (inferInstance : Ring S.carrier)

instance {S : Alg.{v} R} : Algebra R ((forget (Alg R)).obj S) :=
  (inferInstance : Algebra R S.carrier)

instance hasForgetToRing : HasForget‚ÇÇ (Alg.{v} R) RingCat.{v} where
  forget‚ÇÇ :=
    { obj := fun A => RingCat.of A
      map := fun f => RingCat.ofHom f.hom.toRingHom }

instance hasForgetToModule : HasForget‚ÇÇ (Alg.{v} R) (ModuleCat.{v} R) where
  forget‚ÇÇ :=
    { obj := fun M => ModuleCat.of R M
      map := fun f => ModuleCat.ofHom f.hom.toLinearMap }

@[simp]
lemma forget‚ÇÇ_module_obj (X : Alg.{v} R) :
    (forget‚ÇÇ (Alg.{v} R) (ModuleCat.{v} R)).obj X = ModuleCat.of R X :=
  rfl

@[simp]
lemma forget‚ÇÇ_module_map {X Y : Alg.{v} R} (f : X ‚ü∂ Y) :
    (forget‚ÇÇ (Alg.{v} R) (ModuleCat.{v} R)).map f = ModuleCat.ofHom f.hom.toLinearMap :=
  rfl

