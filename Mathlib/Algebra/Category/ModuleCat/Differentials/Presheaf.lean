  Derivation'.mk (fun X ‚Ü¶ CommRingCat.KaehlerDifferential.D (œÜ'.app X)) (fun X Y f x ‚Ü¶ by
    rw [relativeDifferentials'_map_apply, CommRingCat.KaehlerDifferential.map_d])

