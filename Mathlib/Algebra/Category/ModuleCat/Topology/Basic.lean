    refine le_of_eq_of_le ?_ (coinduced_mono (continuous_iff_coinduced_le.mp f.hom.2))
    rw [coinduced_compose, coinduced_compose]
    congr 1
    ext x
    simp [coe_freeObj]‚ü©

