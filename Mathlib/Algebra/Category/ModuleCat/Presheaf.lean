open CategoryTheory LinearMap Opposite

variable {C : Type uโ} [Category.{vโ} C]

/-- A presheaf of modules over a given presheaf of rings,
described as a presheaf of abelian groups, and the extra data of the action at each object,
and a condition relating functoriality and scalar multiplication. -/
structure PresheafOfModules (R : Cแตแต โฅค RingCat.{u}) where
  presheaf : Cแตแต โฅค AddCommGroupCat.{v}
  module : โ X : Cแตแต, Module (R.obj X) (presheaf.obj X) := by infer_instance
  map_smul : โ {X Y : Cแตแต} (f : X โถ Y) (r : R.obj X) (x : presheaf.obj X),
    presheaf.map f (r โข x) = R.map f r โข presheaf.map f x := by aesop_cat

variable {R : Cแตแต โฅค RingCat.{u}}

namespace PresheafOfModules

attribute [instance] PresheafOfModules.module

/-- The bundled module over an object `X`. -/
def obj (P : PresheafOfModules R) (X : Cแตแต) : ModuleCat (R.obj X) :=
  ModuleCat.of _ (P.presheaf.obj X)

/--
If `P` is a presheaf of modules over a presheaf of rings `R`, both over some category `C`,
and `f : X โถ Y` is a morphism in `Cแตแต`, we construct the `R.map f`-semilinear map
from the `R.obj X`-module `P.presheaf.obj X` to the `R.obj Y`-module `P.presheaf.obj Y`.
 -/
def map (P : PresheafOfModules R) {X Y : Cแตแต} (f : X โถ Y) :
    P.obj X โโโ[R.map f] P.obj Y :=
  { toAddHom := (P.presheaf.map f).toAddHom,
    map_smul' := P.map_smul f, }

@[simp]
theorem map_apply (P : PresheafOfModules R) {X Y : Cแตแต} (f : X โถ Y) (x) :
    P.map f x = (P.presheaf.map f) x :=
  rfl

instance (X : Cแตแต) : RingHomId (R.map (๐ X)) where
  eq_id := R.map_id X

instance {X Y Z : Cแตแต} (f : X โถ Y) (g : Y โถ Z) :
    RingHomCompTriple (R.map f) (R.map g) (R.map (f โซ g)) where
  comp_eq := (R.map_comp f g).symm

@[simp]
theorem map_id (P : PresheafOfModules R) (X : Cแตแต) :
    P.map (๐ X) = LinearMap.id' := by
  ext
  simp

@[simp]
theorem map_comp (P : PresheafOfModules R) {X Y Z : Cแตแต} (f : X โถ Y) (g : Y โถ Z) :
    P.map (f โซ g) = (P.map g).comp (P.map f) := by
  ext
  simp

/-- A morphism of presheaves of modules. -/
structure Hom (P Q : PresheafOfModules R) where
  hom : P.presheaf โถ Q.presheaf
  map_smul : โ (X : Cแตแต) (r : R.obj X) (x : P.presheaf.obj X), hom.app X (r โข x) = r โข hom.app X x

namespace Hom

/-- The identity morphism on a presheaf of modules. -/
def id (P : PresheafOfModules R) : Hom P P where
  hom := ๐ _
  map_smul _ _ _ := rfl

/-- Composition of morphisms of presheaves of modules. -/
def comp {P Q R : PresheafOfModules R} (f : Hom P Q) (g : Hom Q R) : Hom P R where
  hom := f.hom โซ g.hom
  map_smul _ _ _ := by simp [Hom.map_smul]

end Hom

instance : Category (PresheafOfModules R) where
  Hom := Hom
  id := Hom.id
  comp f g := Hom.comp f g

namespace Hom

variable {P Q T : PresheafOfModules R}

/--
The `(X : Cแตแต)`-component of morphism between presheaves of modules
over a presheaf of rings `R`, as an `R.obj X`-linear map. -/
def app (f : Hom P Q) (X : Cแตแต) : P.obj X โโ[R.obj X] Q.obj X :=
  { toAddHom := (f.hom.app X).toAddHom
    map_smul' := f.map_smul X }

@[simp]
lemma comp_app (f : P โถ Q) (g : Q โถ T) (X : Cแตแต) :
    (f โซ g).app X = (g.app X).comp (f.app X) := rfl

@[ext]
theorem ext {f g : P โถ Q} (w : โ X, f.app X = g.app X) : f = g := by
  cases f; cases g
  congr
  ext X x
  exact LinearMap.congr_fun (w X) x

