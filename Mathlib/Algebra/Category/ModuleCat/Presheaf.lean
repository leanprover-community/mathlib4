@[reassoc (attr := simp)]
lemma restrictionApp_naturality {X Y : Cแตแต} (f : X โถ Y)
    {M N : PresheafOfModules R} (ฯ : M โถ N) :
    restrictionApp f M โซ (ModuleCat.restrictScalars (R.map f)).map (Hom.app ฯ Y) =
      ModuleCat.ofHom (Hom.app ฯ X) โซ restrictionApp f N :=
  ((restriction R f).naturality ฯ).symm

attribute [local simp] restrictionApp_apply

lemma restrictionApp_id (M : PresheafOfModules R) (X : Cแตแต) :
    restrictionApp (๐ X) M =
      (ModuleCat.restrictScalarsId' (R.map (๐ X)) (R.map_id X)).inv.app (M.obj X) := by aesop

lemma restrictionApp_comp (M : PresheafOfModules R) {X Y Z : Cแตแต} (f : X โถ Y) (g : Y โถ Z) :
    restrictionApp (f โซ g) M =
      restrictionApp f M โซ
        (ModuleCat.restrictScalars (R.map f)).map (restrictionApp g M) โซ
        (ModuleCat.restrictScalarsComp' _ _ _ (R.map_comp f g)).inv.app (M.obj Z) := by aesop

