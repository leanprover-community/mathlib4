/-- The restriction natural transformation on presheaves of modules, considered as linear maps
to restriction of scalars. -/
@[simps]
noncomputable def restriction {X Y : Cแตแต} (f : X โถ Y) :
    evaluation R X โถ evaluation R Y โ ModuleCat.restrictScalars (R.map f) where
  app := restrictionApp f
  naturality := fun M N ฯ => by
    ext x
    exact (congr_hom (ฯ.hom.naturality f) x).symm

