    OrderedSMul ùïú M := by
  have hlt' : ‚àÄ (a b : M) (c : ùïú), a < b ‚Üí 0 < c ‚Üí c ‚Ä¢ a < c ‚Ä¢ b := by
    refine' fun a b c hab hc => (h hab hc).lt_of_ne _
    rw [Ne.def, hc.ne'.isUnit.smul_left_cancel]
