theorem l_supr {f : ι → α} : l (supr f) = ⨆ i, l (f i) :=
  Eq.symm <|
    IsLub.supr_eq <|
      show IsLub (range (l ∘ f)) (l (supr f)) by
        rw [range_comp, ← Sup_range] <;> exact gc.is_lub_l_image (is_lub_Sup _)
#align galois_connection.l_supr GaloisConnection.l_supr

