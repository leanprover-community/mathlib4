theorem IsExtrOn.on_preimage (g : Œ¥ ‚Üí Œ±) {b : Œ¥} (hf : IsExtrOn f s (g b)) :
    IsExtrOn (f ‚àò g) (g ‚Åª¬π' s) b :=
