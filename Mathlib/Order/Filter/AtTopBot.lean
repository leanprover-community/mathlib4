  have hsucc (n : ‚Ñï) : xs (n + 1) = c (xs n) (ys n) := by simp [xs, List.range_succ]
  refine ‚ü®xs, ?_, ?_‚ü©
  ¬∑ refine monotone_nat_of_le_succ fun n ‚Ü¶ ?_
    rw [hsucc]
    apply hleft
  ¬∑ refine (tendsto_add_atTop_iff_nat 1).1 <| tendsto_atTop_mono (fun n ‚Ü¶ ?_) h
    rw [hsucc]
    apply hright

