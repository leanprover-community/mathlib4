noncomputable def galXPowEquivUnitsZMod : (X ^ (n : ‚Ñï) - 1 : K[X]).Gal ‚âÉ* (ZMod n)À£ :=
  (AlgEquiv.autCongr
      (IsSplittingField.algEquiv L _ : L ‚âÉ‚Çê[K] (X ^ (n : ‚Ñï) - 1 : K[X]).SplittingField)).symm.trans
