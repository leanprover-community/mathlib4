/-- `‚Ñ§` with its usual ring structure is not a field. -/
theorem Int.not_isField : ¬¨IsField ‚Ñ§ := fun h =>
  Int.not_even_one <|
    (h.mul_inv_cancel two_ne_zero).imp fun a => by rw [‚Üê two_mul]; exact Eq.symm
#align int.not_is_field Int.not_isField

