  fromBlocks (diagonal fun _ => 1) 0 0 <| reindex (Equiv.prodComm _ _) (Equiv.prodComm _ _)
    (blockDiagonal (fun _ => (2 : ‚ÑÇ)‚Åª¬π ‚Ä¢ !![1, 1; - I, I]))

