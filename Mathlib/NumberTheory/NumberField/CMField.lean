    (unitsMulComplexConjInv K).range.index ‚à£ 2 := by
  suffices (powMonoidHom 2 : _ ‚Üí* torsion K).range.index = 2 by
    refine this ‚ñ∏ Subgroup.index_dvd_of_le ?_
