    multiplicity.ne_top_iff_finite.1 (fun ht ‚Ü¶ by simp [ht] at h1)
  have h2' : multiplicity.Finite (hŒ∂.toInteger - 1) (S'.a + Œ∑ * S'.b) := by
    refine multiplicity.ne_top_iff_finite.1 (fun ht ‚Ü¶ ?_)
    rw [coe_eta] at ht
