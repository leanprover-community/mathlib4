  simp only [tsum_fintype, Finset.univ_eq_attach, Finset.sum_attach ((n : ‚Ñï).divisorsAntidiagonal)
    (fun (x : ‚Ñï √ó ‚Ñï) ‚Ü¶ (x.1 : ùïú) ^ k * r ^ (x.2 * x.1)), Nat.sum_divisorsAntidiagonal'
    (fun x y ‚Ü¶ (x : ùïú) ^ k * r ^ (y * x)), Finset.sum_mul]
