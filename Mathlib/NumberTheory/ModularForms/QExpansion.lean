theorem Function.Periodic.im_invQParam_pos_of_abs_lt_one
    {h : ‚Ñù} (hh : 0 < h) {q : ‚ÑÇ} (hq : q.abs < 1) (hq_ne : q ‚â† 0) :
    0 < im (Periodic.invQParam h q) :=
