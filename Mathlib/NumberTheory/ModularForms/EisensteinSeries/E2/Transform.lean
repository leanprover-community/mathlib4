        simp only [hb, Int.cast_zero, zero_mul, zero_add, Œ¥, Nat.succ_eq_add_one, Nat.reduceAdd,
          Matrix.vecCons_inj, h hb, and_true, and_false, ‚ÜìreduceIte, Int.reduceNeg, hn, add_zero]
