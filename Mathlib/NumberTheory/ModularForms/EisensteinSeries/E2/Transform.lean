  ¬∑ rw [‚Üê tsum_eq_of_summable_unconditional (L := symCondInt)]
    ¬∑ congr
      ext a
      rw [e2Summand, tsum_eq_of_summable_unconditional (L := IcoFilter ‚Ñ§), ‚Üê Summable.tsum_add]
      ¬∑ congr
        ext b
