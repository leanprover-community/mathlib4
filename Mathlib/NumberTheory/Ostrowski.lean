  rintro ‚ü®c, hc‚ÇÄ, hc‚ü©
  apply_fun (¬∑ 2) at hc
  simp only [real_eq_abs, abs_ofNat, cast_ofNat] at hc
  exact ((padic_le_one p 2).trans_lt <| one_lt_rpow one_lt_two hc‚ÇÄ).ne' hc

