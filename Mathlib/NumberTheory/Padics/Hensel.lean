theorem padic_polynomial_dist {p : ‚Ñï} [Fact p.Prime] (F : Polynomial ‚Ñ§_[p]) (x y : ‚Ñ§_[p]) :
    ‚ÄñF.eval x - F.eval y‚Äñ ‚â§ ‚Äñx - y‚Äñ :=
  let ‚ü®z, hz‚ü© := F.evalSubFactor x y
