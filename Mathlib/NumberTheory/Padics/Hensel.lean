private def ih_n {n : ‚Ñï} {z : ‚Ñ§_[p]} (hz : ih n z) : { z' : ‚Ñ§_[p] // ih (n + 1) z' } :=
  have h1 : ‚Äñ(‚Üë(F.eval z) : ‚Ñö_[p]) / ‚Üë(F.derivative.eval z)‚Äñ ‚â§ 1 := calc_norm_le_one hnorm hz
