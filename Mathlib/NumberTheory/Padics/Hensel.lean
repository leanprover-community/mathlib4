    let ‚ü®q, heq‚ü© := calc_eval_z' hnorm rfl hz h1 rfl
    have hnle : ‚ÄñF.eval z'‚Äñ ‚â§ ‚ÄñF.derivative.eval a‚Äñ ^ 2 * T ^ 2 ^ (n + 1) :=
      calc_eval_z'_norm hz heq h1 rfl
