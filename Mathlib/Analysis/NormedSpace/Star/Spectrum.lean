      coe_pow, sq, ‚Üê nnnorm_star_mul_self, Commute.mul_pow (star_comm_self' a), star_pow]
  have h‚ÇÇ :=
    ((ENNReal.continuous_pow 2).tendsto (spectralRadius ‚ÑÇ a)).comp
