          q n fun i : Fin n => p (r i) fun _j => z) =
      ‚àë i in compPartialSumTarget 0 N N, q.compAlongComposition p i.2 fun _j => z by
    simpa only [FormalMultilinearSeries.partialSum, ContinuousMultilinearMap.map_sum_finset] using H
