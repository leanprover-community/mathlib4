  ¬∑ have hy := hx‚ÇÄ.trans hxy
    rw [Set.mem_Icc, inr_le_iff _ _ hx‚ÇÄ.isSelfAdjoint hy.isSelfAdjoint,
      ‚Üê norm_le_one_iff_of_nonneg _, norm_inr]
