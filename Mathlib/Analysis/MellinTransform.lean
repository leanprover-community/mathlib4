    IntegrableOn (fun t : ‚Ñù => (t : ‚ÑÇ) ^ (s - 1) ‚Ä¢ f t) T ‚Üî
      IntegrableOn (fun t : ‚Ñù => t ^ (s.re - 1) * ‚Äñf t‚Äñ) T := by
