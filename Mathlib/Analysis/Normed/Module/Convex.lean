  simp only [add_sub_cancel_left, norm_smul, Real.norm_eq_abs]
  rw [abs_of_nonneg hu_nonneg]
  conv_rhs => rw [‚Üê one_mul (‚Äñz - x‚Äñ)]
  gcongr

