    (h_eq : ‚àÄ y : S, ‚àÉ (C‚ÇÅ C‚ÇÇ : ‚Ñù) (_ : 0 < C‚ÇÅ) (_ : 0 < C‚ÇÇ),
      ‚àÄ x : Algebra.adjoin R {y}, f‚ÇÅ x.val ‚â§ C‚ÇÅ * f‚ÇÇ x.val ‚àß f‚ÇÇ x.val ‚â§ C‚ÇÇ * f‚ÇÅ x.val) :
    f‚ÇÅ = f‚ÇÇ := by
