  have h2 : f‚ÇÇ y.val = g‚ÇÇ y := rfl
  obtain ‚ü®C‚ÇÅ, C‚ÇÇ, hC‚ÇÅ_pos, hC‚ÇÇ_pos, hC‚ü© := h_eq x
  obtain ‚ü®hC‚ÇÅ, hC‚ÇÇ‚ü© := forall_and.mp hC
