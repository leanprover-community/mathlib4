variable {f}

@[simp]
theorem toLocalHomeomorph_coe {n : ‚Ñï‚àû} (hf : ContDiffAt ùïÇ n f a)
    (hf' : HasFDerivAt f (f' : E' ‚ÜíL[ùïÇ] F') a) (hn : 1 ‚â§ n) :
    (hf.toLocalHomeomorph f hf' hn : E' ‚Üí F') = f :=
  rfl
#align cont_diff_at.to_local_homeomorph_coe ContDiffAt.toLocalHomeomorph_coe

theorem mem_toLocalHomeomorph_source {n : ‚Ñï‚àû} (hf : ContDiffAt ùïÇ n f a)
    (hf' : HasFDerivAt f (f' : E' ‚ÜíL[ùïÇ] F') a) (hn : 1 ‚â§ n) :
    a ‚àà (hf.toLocalHomeomorph f hf' hn).source :=
  (hf.hasStrictFDerivAt' hf' hn).mem_toLocalHomeomorph_source
