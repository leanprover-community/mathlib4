/-- In a real vector space, a function `f` that approximates a linear equivalence on a subset `s`
can be extended to a homeomorphism of the whole space. -/
theorem exists_homeomorph_extension {E : Type*} [NormedAddCommGroup E] [NormedSpace ‚Ñù E]
    {F : Type*} [NormedAddCommGroup F] [NormedSpace ‚Ñù F] [FiniteDimensional ‚Ñù F] {s : Set E}
    {f : E ‚Üí F} {f' : E ‚âÉL[‚Ñù] F} {c : ‚Ñù‚â•0} (hf : ApproximatesLinearOn f (f' : E ‚ÜíL[‚Ñù] F) s c)
    (hc : Subsingleton E ‚à® lipschitzExtensionConstant F * c < ‚Äñ(f'.symm : F ‚ÜíL[‚Ñù] E)‚Äñ‚Çä‚Åª¬π) :
    ‚àÉ g : E ‚âÉ‚Çú F, EqOn f g s := by
  -- the difference `f - f'` is Lipschitz on `s`. It can be extended to a Lipschitz function `u`
  -- on the whole space, with a slightly worse Lipschitz constant. Then `f' + u` will be the
  -- desired homeomorphism.
  obtain ‚ü®u, hu, uf‚ü© :
    ‚àÉ u : E ‚Üí F, LipschitzWith (lipschitzExtensionConstant F * c) u ‚àß EqOn (f - ‚áëf') u s :=
    hf.lipschitzOnWith.extend_finite_dimension
  let g : E ‚Üí F := fun x => f' x + u x
  have fg : EqOn f g s := fun x hx => by simp_rw [‚Üê uf hx, Pi.sub_apply, add_sub_cancel'_right]
  have hg : ApproximatesLinearOn g (f' : E ‚ÜíL[‚Ñù] F) univ (lipschitzExtensionConstant F * c) := by
    apply LipschitzOnWith.approximatesLinearOn
    rw [lipschitzOn_univ]
    convert hu
    ext x
    simp only [add_sub_cancel', ContinuousLinearEquiv.coe_coe, Pi.sub_apply]
  haveI : FiniteDimensional ‚Ñù E := f'.symm.finiteDimensional
  exact ‚ü®hg.toHomeomorph g hc, fg‚ü©
#align approximates_linear_on.exists_homeomorph_extension ApproximatesLinearOn.exists_homeomorph_extension

