    {E : Type*} [NormedAddCommGroup E] [NormedSpace ùïú E] {f : E ‚Üí G}
    {C : ‚Ñù‚â•0} (hf : Differentiable ùïú f)
    (bound : ‚àÄ x, ‚Äñfderiv ùïú f x‚Äñ‚Çä ‚â§ C) : LipschitzWith C f := by
