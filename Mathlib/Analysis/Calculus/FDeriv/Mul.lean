theorem DifferentiableAt.mul (ha : DifferentiableAt 𝕜 a x) (hb : DifferentiableAt 𝕜 b x) :
    DifferentiableAt 𝕜 (a * b) x :=
  (ha.hasFDerivAt.mul' hb.hasFDerivAt).differentiableAt

