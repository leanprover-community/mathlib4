theorem IsExtrOn.hasLineDerivWithinAt_eq_zero (h : IsExtrOn f s a)
    (hd : HasLineDerivWithinAt ‚Ñù f f' s a b) (h' : ‚àÄ·∂† t : ‚Ñù in ùìù 0, a + t ‚Ä¢ b ‚àà s) : f' = 0 :=
