      ¬∑ simpa
    _ = ‚Äñl ^ 2 - (s - l) ^ 2‚Äñ / (‚Äñs - l‚Äñ ^ 2 * ‚Äñl‚Äñ ^ 2) := by simp
    _ ‚â§ ‚Äñl ^ 2 - (s - l) ^ 2‚Äñ / ((‚Äñl‚Äñ / 2) ^ 2 * ‚Äñl‚Äñ ^ 2) := by
      gcongr
