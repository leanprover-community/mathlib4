  intros l hl
  simp only [Metric.mem_ball, dist_zero_right, Set.mem_compl_iff, Set.mem_setOf_eq, not_forall,
    not_le, Metric.mem_closedBall, AddSubgroupClass.coe_norm] at hl ‚ä¢
