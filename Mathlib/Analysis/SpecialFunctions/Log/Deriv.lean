theorem tendsto_mul_log_one_plus_div_atTop (t : ‚Ñù) :
    Tendsto (fun x => x * log (1 + t / x)) atTop (ùìù t) := by
  have h‚ÇÅ : Tendsto (fun h => h‚Åª¬π * log (1 + t * h)) (ùìù[‚â†] 0) (ùìù t) := by
