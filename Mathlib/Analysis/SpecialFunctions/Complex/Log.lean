lemma Real.HasSum_rexp_HasProd (f : Œπ ‚Üí Œ± ‚Üí ‚Ñù) (hfn : ‚àÄ x n, 0 < f n x)
    (hf : ‚àÄ x : Œ±, HasSum (fun n => log (f n x)) (‚àë' i, log (f i x))) (a : Œ±) :
       HasProd (fun b ‚Ü¶ f b a) (‚àè' n : Œπ, (f n a)) := by
