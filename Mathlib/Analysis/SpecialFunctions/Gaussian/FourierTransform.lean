  apply Integrable.fintype_prod (f := fun i (v : ‚Ñù) ‚Ü¶ cexp (-b i * v^2 + c i * v)) (fun i ‚Ü¶ ?_)
  convert integrable_cexp_quadratic (hb i) (c i) 0 using 3 with x
